<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inventory_valuation_group_tree_view" model="ir.ui.view">
            <field name="name">inventory_valuation_group_tree_view</field>
            <field name="model">inventory.valuation.group</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="inventory_valuation_group_form_view" model="ir.ui.view">
            <field name="name">inventory_valuation_group_form</field>
            <field name="model">inventory.valuation.group</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_inventory_valuation_group_form" model="ir.actions.act_window">
            <field name="name">Inventory Valuation Group</field>
            <field name="res_model">inventory.valuation.group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_inventory_valuation_group" parent="account.account_management_menu"
                  name="Inventory Valuation Group"
                  groups="account.group_account_user"
                  action="action_inventory_valuation_group_form" sequence="102"/>

    </data>
</odoo>
