<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_warehouse_inventory_valuation_group_form_inherit" model="ir.ui.view">
            <field name="name">stock.warehouse.valuation.group.form.inherit</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//page[2]" position="after">
                    <page string="Account">
                        <group>
                            <field name="x_inventory_valuation_group_id" string="Inventory Valuation Group"
                            options='{"no_create": 1, "no_create_edit": 1}'/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>