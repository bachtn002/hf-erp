<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="print_stamp_template">
            <div class="article">
                <t t-raw="0"/>
            </div>
        </template>
        <template id="report_print_stamp_shelf_product_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="ev_print_stamp_product.print_stamp_template" t-lang="en_US">
                        <div class="page" style="margin-top: 10px; padding-left: 18px">
                            <t t-foreach="o.print_stamp_line_ids" t-as="line">
                                <t t-if="line.allow_printing">
                                    <div class="stamp" style="font-family: Arial; margin-bottom: 225px;  margin-top: 225px; 
                                    height: 270px ; width: 615px; padding-top: 10px;">
                                      <div style="border:solid 1px black;"> 
                                        <div style="height: 15px; width: 100%"></div>
                                        <div class="name_product">
                                            <t t-if="len(line.product_id.product_tmpl_id.name) &lt; 47">
                                                <div style="overflow: hidden; text-overflow:ellipsis;
                                                height: 120px; line-height:60px;                                                              
                                                text-align: center;                                                              
                                                font-size: 40px; font-weight: bold">
                                                    <span t-esc="line.product_id.product_tmpl_id.name.upper()"/>
                                                </div>
                                            </t>

                                            <t t-else="">
                                                <div style="overflow: hidden; text-overflow:ellipsis;
                                                height: 120px; line-height:40px; 
                                                text-align: center;
                                                font-size: 34px; font-weight: bold;
                                                word-spacing: -6px letter-spacing: 1px">
                                                    <span t-esc="line.product_id.product_tmpl_id.name.upper()"/>
                                                </div>
                                            </t>
                                        </div>
                                        <div style="height: 80px; text-align: center">
                                            <span style="font-size: 52px;font-weight: bold;">
                                                <t t-esc="'{:,.0f}'.format(line.price_unit).replace(',', '.')"/>
Ä‘/
                                            </span>
                                            <span style="font-size: 28px;">
                                                <t t-esc="line.uom_id.name"/>
                                            </span>
                                        </div>
                                        <div style="height: 60px; width: 100%; text-align: center; padding-left:10px; background-color: black;">
                                            <img width="auto" height="60px" style="margin-right:15px; object-fit: cover; position: relative; padding-top:2px; padding-top: 10px" t-att-src="'/ev_print_stamp_product/static/src/img/logoHF.png'" class="pull-center"/>
                                        </div>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperformat_qweb_print_stamp_shelf_product" model="report.paperformat">
            <field name="name">Print Stamp Shelf Product</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">55</field>
            <field name="page_width">75</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">180</field>
        </record>

        <record id="report_print_stamp_shelf_product" model="ir.actions.report">
            <field name="name">Print Stamp Shelf</field>
            <field name="model">print.stamp</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ev_print_stamp_product.report_print_stamp_shelf_product_view</field>
            <field name="report_file">ev_print_stamp_product.report_print_stamp_shelf_product_view</field>
            <field name="paperformat_id" ref="ev_print_stamp_product.paperformat_qweb_print_stamp_shelf_product"/>
            <field name="print_report_name">'Print Stamp Shelf'</field>
        </record>

    </data>
</odoo>