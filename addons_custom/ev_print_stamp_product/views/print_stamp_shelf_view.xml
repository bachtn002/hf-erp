<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="print_stamp_shelf_view_form" model="ir.ui.view">
            <field name="name">Print Stamp Shelf Form</field>
            <field name="model">print.stamp</field>
            <field name="arch" type="xml">
                <form duplicate="0">
                    <sheet>
                        <div>
                            <h1 style="text-align: center;">
                                <b>Print Stamp Shelf</b>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="shop_id" options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="pricelist_id" required="1" readonly="1" force_save="1" options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"/>
                                <field name="stamp_type" invisible="1"/>
                                <field name="button_choose" invisible="1"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <span>
                                    <button name="action_choose_all" type="object" string="Choose All" class="oe_highlight" attrs="{'invisible': ['|',('stamp_type', '!=', 'shelf'),('button_choose','=',True)]}" style="width:127px"/>
                                </span>
                                <span>
                                    <button name="action_unchoose_all" type="object" string="Un Choose All" class="oe_highlight" attrs="{'invisible': ['|',('stamp_type', '!=', 'shelf'),('button_choose','=',False)]}" style="width:127px"/>
                                </span>
                                <span style="width:30px; padding-left:10px ">
                                    <button name="print_stamp_shelf" type="object" string="Print" class="oe_highlight" attrs="{'invisible': [('stamp_type', '!=', 'shelf')]}" style="width: 50px; padding-left:10px"/>
                                </span>
                                <span style="padding-left:10px ">
                                    <button name="print_stamp_shelf_product" type="object" string="Print 2" class="oe_highlight" attrs="{'invisible': [('stamp_type', '!=', 'shelf')]}" style="width: 180px"/>
                                </span>
                                <field name="print_stamp_line_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="allow_printing" widget="boolean_toggle"/>
                                        <field name="product_id" force_save="1" readonly="1" options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"/>
                                        <field name="price_unit" width="240px" force_save="1" readonly="1"/>
                                        <field name="uom_id" width="230px" force_save="1" readonly="1" options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"/>
                                        <field name="print_stamp_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="product_id" readonly="1" force_save="1" options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"/>
                                                <field name="uom_id" readonly="1" force_save="1" options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"/>

                                            </group>
                                            <group>
                                                <field name="price_unit" readonly="1" force_save="1"/>
                                                <field name="print_stamp_id" invisible="1"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="print_stamp_shelf_action" model="ir.actions.act_window">
            <field name="name">Print Stamp Shelf Action</field>
            <field name="res_model">print.stamp</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('print_stamp_shelf_view_form')})]"/>
            <field name="domain">[('stamp_type', '=', 'shelf')]</field>
            <field name="context">{'default_stamp_type': 'shelf'}</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_print_stamp_shelf" name="Print Stamp Shelf" parent="stock.menu_stock_inventory_control" action="print_stamp_shelf_action" sequence="2"/>
        <menuitem id="menu_print_stamp_shelf_2" name="Print Stamp Shelf" parent="point_of_sale.pos_config_menu_catalog" action="print_stamp_shelf_action" sequence="20"/>
    </data>
</odoo>
