<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_balance_employee_tree_view" model="ir.ui.view">
            <field name="name">Account_balance_employee</field>
            <field name="model">account.balance.employee</field>
            <field name="arch" type="xml">
                <tree string="Account balance employee" editable="top">
                    <field name="partner_id" required="1" options="{'no_create':1, 'no_create_edit':1}"/>
                    <field name="employee" readonly="1" force_save="1"/>
                    <field name="branch_id" required="1" options="{'no_create':1, 'no_create_edit':1}"/>
                    <field name="account_id" required="1" options="{'no_create':1, 'no_create_edit':1}"/>
                    <field name="debit" required="1"/>
                    <field name="credit" required="1"/>
                    <field name="date" readonly="1" force_save="1"/>
                </tree>
            </field>
        </record>

        <record id="account_balance_employee_action" model="ir.actions.act_window">
            <field name="name">Account_balance_employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.balance.employee</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_balance_employee_tree_view"/>
        </record>

        <menuitem id="account_balance_employee_menu" name="Account balance employee" parent="menu_ev_opening_balance"
                  action="account_balance_employee_action" sequence="1" groups="account.group_account_user,account.group_account_manager"/>
    </data>
</odoo>