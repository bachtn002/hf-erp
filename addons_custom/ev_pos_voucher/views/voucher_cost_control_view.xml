<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="voucher_cost_control_tree" model="ir.ui.view">
            <field name="name">voucher.cost.control.tree</field>
            <field name="model">voucher.cost.control</field>
            <field name="arch" type="xml">
                <tree string="Account Statement">
                    <field name="name"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                           decoration-success="state not in ('draft','posted')"/>
                </tree>
            </field>
        </record>


        <record id="voucher_cost_control_form" model="ir.ui.view">
            <field name="name">voucher.cost.control.form</field>
            <field name="model">voucher.cost.control</field>
            <field name="arch" type="xml">
                <form string="Account Statement">
                    <header>
                        <button name="action_confirm" type="object" string="confirm"
                                class="oe_highlight" states="synthesized"/>
                        <button name="action_synthetic" type="object" string="Synthetic" class="oe_highlight"
                                states="draft"/>
                        <button name="action_cancel" type="object" string="Cancel" states="posted"/>
                        <button name="action_set_to_draft" type="object" string="Set to draft"
                                class="oe_highlight" states="cancel"/>
                        <button name="action_set_to_draft" type="object" string="Set to draft"
                                states="synthesized"/>
                        <button name="print_move_voucher" string="Print Move Voucher"
                                type="object" class="oe_highlight" states="posted,cancel"/>
                        <button name="action_print_excel" type="object" string="Print Excel" states="synthesized"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,synthesized,posted,cancel"
                               clickable="False"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_move" type="object"
                                    icon="fa-pencil-square-o"
                                    attrs="{'invisible': [('move_count', '=', 0)]}">
                                <field name="move_count" widget="statinfo" string="Account Move"
                                       attrs="{'invisible': [('move_count', '=', 0)]}"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" force_save="1" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                <field name="from_date" attrs="{'readonly' : [('state', '!=', 'draft')]}" required="1"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="1" force_save="1"/>
                                <field name="to_date" attrs="{'readonly' : [('state', '!=', 'draft')]}" required="1"/>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="detail">
                                <field name="line_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="voucher_cost_control_id" invisible="1"/>
                                        <field name="lot_id" readonly="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="used_date" readonly="1"/>
                                        <field name="amount" readonly="1"/>
                                        <field name="pos_order_id" readonly="1"/>
                                        <field name="pos_payment_id" readonly="1"/>
                                        <field name="account_id" force_save="1"
                                               attrs="{'readonly':[('parent.state', '!=', 'synthesized')]}"/>
                                        <field name="analytic_account_id" force_save="1"
                                               attrs="{'readonly':[('parent.state', '!=', 'synthesized')]}"/>
                                        <field name="account_expense_item_id" force_save="1"
                                               attrs="{'readonly':[('parent.state', '!=', 'synthesized')]}"/>
                                        <field name="account_move_id" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="voucher_cost_control_act" model="ir.actions.act_window">
            <field name="name">Voucher Cost Control</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">voucher.cost.control</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_voucher_cost_control" name="Voucher Cost Control"
                  action="voucher_cost_control_act" groups="account.group_account_user"
                  parent="account.menu_finance_entries_actions"
                  sequence="30"/>


    </data>
</odoo>
