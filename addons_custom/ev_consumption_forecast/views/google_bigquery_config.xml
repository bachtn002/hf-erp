<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="google_bigquery_config_view_tree" model="ir.ui.view">
            <field name="name">google_bigquery_config_view_tree</field>
            <field name="model">google.bigquery.config</field>
            <field name="arch" type="xml">
                <tree string="Google Bigquery Config" default_order='create_date desc'>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="google_bigquery_config_view_form" model="ir.ui.view">
            <field name="name">google_bigquery_config_view_form</field>
            <field name="model">google.bigquery.config</field>
            <field name="arch" type="xml">
                <form string="Google Bigquery Config">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="json_key"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="google_bigquery_config_action" model="ir.actions.act_window">
            <field name="name">google_bigquery_config_action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">google.bigquery.config</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="google_bigquery_config_menu"
                  name="Google Bigquery Config"
                  action="google_bigquery_config_action"
                  parent="ev_config_connect_api.connection_api_menu"
                  sequence="20"/>
    </data>
</odoo>
