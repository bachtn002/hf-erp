                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td colspan="6" style="text-align: left;">
                                <span style="font-size: 14px; caret-color: rgb(0, 0, 0); color: rgb(0, 0, 0); font-family: 'Times New Roman'; font-weight: 700;">
                                    {self.env.company.name}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="6" style="text-align: left;">
                                <span style="font-size: 14px; caret-color: rgb(0, 0, 0); color: rgb(0, 0, 0); font-family: 'Times New Roman'; font-weight: 700;">
                                    Địa chỉ - {self.env.company.street}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td colspan="2" style="text-align: center;">
                                <span style="caret-color: rgb(0, 0, 0); color: rgb(0, 0, 0);
                                font-family: 'Times New Roman'; font-size: 17px; font-weight: 700; text-align: center;">
                                    BÁO CÁO KIỂM QUỸ CUỐI NGÀY
                                </span>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td colspan="2" style="text-align: center;">
                                <span style="caret-color: rgb(0, 0, 0); color: rgb(0, 0, 0);
                                font-family: 'Times New Roman'; font-size: 14.6667px; font-weight: 700; text-align: center; text-size-adjust: auto;">
                                    Ngày : {self.to_date.strftime('%d/%m/%Y')}
                                </span>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>
    </data>
</odoo>