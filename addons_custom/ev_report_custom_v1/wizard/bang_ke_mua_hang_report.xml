<odoo>
    <data>
        <record id="bang_ke_mua_hang_report_view_form" model="ir.ui.view">
            <field name="name">bang.ke.mua.hang.report.view.form</field>
            <field name="model">bang.ke.mua.hang.report</field>
            <field name="arch" type="xml">
                <form create='0' delete='0' copy='0'>
                    <header>
                        <field name="has_data" invisible="1"/>
                        <button name="action_report" type="object"
                                string="Report" class="btn-primary"/>
                        <button name="action_renew" type="object" string="Renew"
                                class="btn-primary"/>
                        <button name="action_export_excel" type="object"
                                string="Export Excel"
                                attrs="{'invisible': [('has_data', '=', False)]}"/>
                    </header>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12">
                            <group col="3"
                                   style="background-color: #edf5ff;border: solid 1px lightgray;padding: 5px;">
                                <group col="2">
                                    <label for="to_date"/>
                                    <field name="to_date" nolabel="1"/>
                                </group>
                                <group col="2">
                                    <label for="company_id" readonly="1"/>
                                    <field name="company_id" nolabel="1"
                                           readonly="1"
                                           options="{'no_create':True, 'no_edit': True, 'no_quick_create':True}"/>
                                    <label for="template_id" readonly="1"/>
                                    <field name="template_id" nolabel="1"
                                           readonly="1"
                                           options="{'no_create':True, 'no_edit': True, 'no_quick_create':True}"/>
                                </group>
                            </group>
                        </div>
                        <div class="col-lg-12 col-md-12 col-12">
                            <field name="preview_html" nolabel="1" readonly="1"
                                   class="ev_report_table"
                                   widget="ev_report_preview"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="bang_ke_mua_hang_report_action" model="ir.actions.act_window">
            <field name="name">Bang Ke Mua Hang Report </field>
            <field name="res_model">bang.ke.mua.hang.report</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="bang_ke_mua_hang_report_menu"
                name="Bang ke mua hang"
                action="bang_ke_mua_hang_report_action"
                parent="ev_account_report_birt.account_reports_purchase_reports_menu"
                sequence="10"/>
    </data>
</odoo>