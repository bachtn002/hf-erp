<odoo>
    <data>
        <record id="rpt_cash_statement_report_view_form" model="ir.ui.view">
            <field name="name">rpt.cash.statement.report.view.form</field>
            <field name="model">rpt.cash.statement.report</field>
            <field name="arch" type="xml">
                <form create='0' delete='0' copy='0'>
                    <header>
                        <field name="has_data" invisible="1"/>
                        <button name="action_report" type="object"
                                string="Report" class="btn-primary"/>
                        <button name="action_export_excel" type="object"
                                string="Export Excel"
                                attrs="{'invisible': [('has_data', '=', False)]}"/>
                    </header>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12">
                            <group col="2"
                                   style="background-color: #edf5ff;border: solid 1px lightgray;padding: 5px;">
                                <group>
                                    <label for="to_date" readonly="1"/>
                                    <field name="to_date" nolabel="1" required="1"/>
                                </group>
                            </group>
                        </div>
                        <div class="col-lg-12 col-md-12 col-12">
                            <field name="preview_html" nolabel="1" readonly="1"
                                   class="ev_report_table"
                                   widget="ev_report_preview"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="rpt_cash_statement_report_action" model="ir.actions.act_window">
            <field name="name">Báo Cáo Kiểm Quỹ Cuối Ngày</field>
            <field name="res_model">rpt.cash.statement.report</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="rpt_cash_statement_report_menu"
                name="Báo cáo kiểm quỹ cuối ngày"
                action="rpt_cash_statement_report_action"
                parent="ev_pos_report.menu_point_report"
                sequence="10"/>

        <menuitem id="ev_stock_report_birt.menu_rpt_cash_statement"
                active="False"/>
    </data>
</odoo>