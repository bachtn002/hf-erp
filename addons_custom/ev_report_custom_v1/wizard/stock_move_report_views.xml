<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="stock_move_report_form" model="ir.ui.view">
            <field name="name">Stock Move Report Form</field>
            <field name="model">stock.move.report</field>
            <field name="arch" type="xml">
                <form string="Stock Move Report Form" create='0' delete='0' copy='0'>
                    <header>
                        <field name="has_data" invisible="1" />
                        <button name="action_report" type="object" string="Report" class="btn-primary" />
                        <button name="action_renew" type="object" string="Renew" class="btn-primary" />
                        <button name="action_export_excel" type="object" string="Export Excel" attrs="{'invisible': [('has_data', '=', False)]}" />
                    </header>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12">
                            <group col="3">
                                <group col="2">
                                    <field name="from_date" string="From date"
                                        attrs="{'required': [('type', 'in', ('general','general_value'))], 'invisible': [('type', '=', 'inventory')]}"/>
                                    <field name="to_date" required="1" string="To date"/>
                                    <field name="type" widget="selection" required="1" options="{'horizontal': true}"/>
                                    <field name="type_view" widget="radio" required="1" options="{'horizontal': true}"
                                        attrs="{'invisible': [('type', '!=', 'inventory')]}"/>
                                    <field name="x_all_internal" attrs="{'invisible': ['|',('type', '==', 'general'),('type_view','==','pivot')]}"
                                        groups="account.group_account_user"/>
                                </group>
                                <group col="2">
                                        <field name="region_ids" string="Region" widget="many2many_tags"
                                            attrs="{'invisible': [('type', '!=', 'inventory')]}"
                                            groups="stock.group_stock_manager,ev_stock_request.group_stock_coordinator"
                                            options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                                        <field name="location_ids" string="Locations" widget="many2many_tags"
                                           domain="['&amp;', ('usage', '=', 'internal'), ('company_id','=', company_id)]"
                                           options="{'no_edit':True,'no_create':True,'no_create_edit':True}"
                                           attrs="{'invisible': [('x_all_internal', '=', True)]}"/>
                                        <field name="categ_ids" string="Category" widget="many2many_tags"
                                               options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                                        <field name="product_ids" string="Products" widget="many2many_tags"
                                               options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                                        <field name="to_lot" invisible="1"/>
                                </group>
                                <group col="2">
                                    <label for="company_id" groups="base.group_multi_company" />
                                    <field name="company_id" nolabel="1" groups="base.group_multi_company"
                                    options="{'no_create_edit': True, 'no_quick_create': True}" required="1"
                                    />
                                    <label for="template_id" groups="base.group_no_one"/>
                                    <field name="template_id" nolabel="1" groups="base.group_no_one" />
                                </group>
                            </group>
                        </div>
                        <div class="col-lg-12 col-md-12 col-12">
                            <field name="preview_html" nolabel="1" readonly="1" widget="ev_report_preview"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_rpt_stock_move" model="ir.actions.act_window">
            <field name="name">Inventory Report</field>
            <field name="res_model">stock.move.report</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_stock_move_report"
                  name="Inventory Report"
                  action="action_rpt_stock_move"
                  parent="stock.menu_warehouse_report"
                  groups="stock.group_stock_manager,ev_stock_request.group_stock_coordinator,stock.group_stock_user"
                  sequence="33"/>

        <menuitem id="menu_stock_move_report_account"
                  name="Inventory Report" action="action_rpt_stock_move"
                  parent="menu_report_stock"
                  sequence="5"/>

        <record model="ir.ui.menu" id="ev_stock_report_birt.menu_rpt_stock_move_2">
            <field name="action" eval="False"/>
        </record>

        <record model="ir.ui.menu" id="ev_stock_report_birt.menu_rpt_stock_move_account">
            <field name="action" eval="False"/>
        </record>
    </data>
</odoo>