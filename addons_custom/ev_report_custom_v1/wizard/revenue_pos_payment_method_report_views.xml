<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="revenue_pos_payment_method_report_form" model="ir.ui.view">
            <field name="name">Revenue Pos Payment Method Report Form</field>
            <field name="model">revenue.pos.payment.method.report</field>
            <field name="arch" type="xml">
                <form string="Revenue Pos Payment Method Report Form" create='0' delete='0' copy='0'>
                    <header>
                        <field name="has_data" invisible="1" />
                        <button name="action_report" type="object" string="Report" class="btn-primary" />
                        <button name="action_export_excel" type="object" string="Export Excel" attrs="{'invisible': [('has_data', '=', False)]}" />
                    </header>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12">
                            <group col="3">
                                <group col="2">
                                    <label for="from_date" />
                                    <field name="from_date" nolabel="1" />
                                </group>
                                <group col="2">
                                    <label for="to_date" />
                                    <field name="to_date" nolabel="1" />
                                </group>
                                <group col="2">
                                    <label for="company_id" groups="base.group_multi_company" />
                                    <field name="company_id" nolabel="1" groups="base.group_multi_company"
                                    options="{'no_create_edit': True, 'no_quick_create': True}" required="1"
                                    />
                                    <label for="template_id" groups="base.group_no_one"/>
                                    <field name="template_id" nolabel="1" groups="base.group_no_one" />
                                </group>
                            </group>
                        </div>
                        <div class="col-lg-12 col-md-12 col-12">
                            <field name="preview_html" nolabel="1" readonly="1" widget="ev_report_preview"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <!-- action -->
        <record id="rpt_revenue_pos_payment_method_action" model="ir.actions.act_window">
            <field name="name">Revenue Pos Payment Method Report</field>
            <field name="res_model">revenue.pos.payment.method.report</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <!-- menu -->
        <menuitem id="menu_rpt_revenue_pos_payment_method"
                  name="Revenue Pos Payment Method Report"
                  action="rpt_revenue_pos_payment_method_action"
                  parent="ev_pos_report.menu_point_report"
                  groups="point_of_sale.group_pos_user"
                  sequence="3"/>

        <record model="ir.ui.menu" id="ev_pos_report.menu_rpt_revenue_pos_payment_method">
            <field name="action" eval="False"/>
        </record>
    </data>
</odoo>