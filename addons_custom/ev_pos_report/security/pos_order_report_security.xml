<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="rule_pos_shop" model="ir.rule">
			<field name="name">Pos Order Report Shop</field>
			<field name="model_id" ref="model_report_pos_order"/>
			<field name="domain_force">['|',
			                            ('x_pos_shop_id', 'in', user.x_pos_shop_ids.ids),
			                            ('x_security_user_no_shop', '=', user.security_pos_shop)
			                            ]
			</field>
			<field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
		</record>
	</data>
</odoo>
