<odoo>
    <data>

        <record model="ir.ui.view" id="product_category_filter_report_form">
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"></field>
            <field name="arch" type="xml">
                <field name="parent_id" position="before">
                    <field name="filter_report"/>
                </field>
            </field>
        </record>

        <record id="top_selling_products_report_form" model="ir.ui.view">
            <field name="name">top.selling.products.report.form</field>
            <field name="model">top.selling.products.report</field>
            <field name="arch" type="xml">
                <form string="Choose date">
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="limited" required="1"/>
                        </group>
                        <group>
                            <field name="to_date" required="1"/>
                            <field name="product_category" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_report" string="Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="top_selling_products_line_graph" model="ir.ui.view">
            <field name="name">top.selling.products.line.graph</field>
            <field name="model">top.selling.products.line</field>
            <field name="arch" type="xml">
                <graph string="Top selling products report">
                    <field name="product_categ_id" type="row"/>
                    <field name="quantity" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="top_selling_products_pivot" model="ir.ui.view">
            <field name="name">top.selling.products.line.pivot</field>
            <field name="model">top.selling.products.line</field>
            <field name="arch" type="xml">
                <pivot string="Top selling products line">
                    <field name="product_categ_id" type="row"/>
                    <field name="quantity" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_top_selling_products" model="ir.actions.act_window">
            <field name="name">Sales Analysis</field>
            <field name="res_model">top.selling.products.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="top_selling_products_report_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <record id="action_izi_top_selling_products_line" model="ir.actions.act_window">
            <field name="name">Sales analysis line</field>
            <field name="res_model">top.selling.products.line</field>
            <field name="view_mode">graph,pivot</field>
            <field name="view_id" ref="top_selling_products_line_graph"/>
        </record>

        <menuitem id="menu_top_selling_products" name="Sales Analysis" sequence="100" action="action_top_selling_products"
                  parent="menu_point_report" groups="point_of_sale.group_pos_manager"/>

    </data>
</odoo>