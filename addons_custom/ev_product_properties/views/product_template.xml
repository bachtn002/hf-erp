<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="product_template_form_view_custom" model="ir.ui.view">
            <field name="name">product.template.form.view.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="groups">point_of_sale.group_pos_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_related_putaway_rules']" position="attributes">
                    <attribute name="groups">point_of_sale.group_pos_manager</attribute>
                </xpath>

            </field>
        </record>

<!--        <record id="purchase.view_product_template_purchase_buttons_from" model="ir.ui.view">-->
<!--            <field name="groups_id" eval="[(6, 0, [ref('purchase.group_purchase_manager')])]"/>-->
<!--        </record>-->
    </data>
</odoo>