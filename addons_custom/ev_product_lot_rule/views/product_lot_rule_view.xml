<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_lot_rule_view_tree" model="ir.ui.view">
        <field name="name">product.lot.rule.view.tree</field>
        <field name="model">product.lot.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="product_lot_rule_view_form" model="ir.ui.view">
        <field name="name">product.lot.rule.view.form</field>
        <field name="model">product.lot.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- <button name="action_generate_product_code" string="Test" type="object" class="oe_highlight"/> -->
                    <group>
                        <group>
                            <field name="name" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                        <group>
                            <field name="rule_len" required="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="product_lot_rule_line_ids">
                                <tree string="Rule Details" editable="bottom">
                                    <field name="name" invisible="1" />
                                    <field name="type" />
                                    <field name="fix_value" attrs="{'invisible':[('type','!=','fix')]}" />
                                    <field name="start_increment" attrs="{'invisible':[('type','!=','increment')]}" />
                                    <field name="product_lot_rule_id" invisible="1" />
                                </tree>
                                <form>
                                    <group>
                                        <field name="type" />
                                        <field name="fix_value" />
                                        <field name="start_increment" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_lot_rule_action" model="ir.actions.act_window">
        <field name="name">Product Lot Rule Action</field>
        <field name="res_model">product.lot.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'active_test': False}</field>
    </record>

    <menuitem id="product_lot_rule_menu" name="Product Lot Rule Menu" action="product_lot_rule_action" parent="stock.menu_product_in_config_stock" groups="ev_product_lot_rule.group_config_product_lot_rule" sequence="65"/>

</odoo>
