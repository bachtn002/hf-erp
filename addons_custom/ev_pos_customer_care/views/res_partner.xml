<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_pos_order_count_property_form" model="ir.ui.view">
            <field name="name">res.partner.pos.order.count.pos.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="4"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(point_of_sale.action_pos_pos_form)d"
                            context="{'search_default_partner_id': active_id,'default_partner_id': active_id}"
                        attrs="{'invisible': [('pos_order_count_care', '=', 0)]}"
                        icon="fa-shopping-bag">
                    <field string="PoS Orders" name="pos_order_count_care" widget="statinfo"/>
                </button>
                </div>
            </field>
        </record>
</odoo>