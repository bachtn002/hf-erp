<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_package_report_view_form" model="ir.ui.view">
            <field name="name">stock.package.report.view.form</field>
            <field name="model">stock.package.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <h1 style="text-align: center;">
                                <b>Stock Package Report</b>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="stock_transfer_id" readonly="1" attrs="{'invisible': [('button_clicked', '=', False)]}"/>
                                <field name="warehouse_id" readonly="1" attrs="{'invisible': [('button_clicked', '=', False)]}"/>
                                <field name="warehouse_dest_id" readonly="1" attrs="{'invisible': [('button_clicked', '=', False)]}"/>
                                <field name="button_clicked" invisible="1" />
                            </group>
                            <group>
                                <field name="date_packaged" readonly="1" attrs="{'invisible': [('button_clicked', '=', False)]}"/>
                                <field name="weight" readonly="1" attrs="{'invisible': [('button_clicked', '=', False)]}"/>
                                <field name="state" forcesave="1" readonly="1" attrs="{'invisible': [('button_clicked', '=', False)]}"/>
                            </group>

                            <div>
                                <button name="button_report" type="object" string="Check" class="oe_highlight"/>
                            </div>
                        </group>
                        <group>
                            <notebook>
                                <page string="Details">
                                    <field name="report_line_ids">
                                        <tree editable="bottom" create="0" delete="0">
                                            <field name="product_id" readonly="True"/>
                                            <field name="qty" readonly="True" />
                                            <field name="qty_done" readonly="True" />
                                            <field name="uom_id" readonly="True" />
                                            <field name="package_report_id" invisible="1" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="stock_package_report_action" model="ir.actions.act_window">
            <field name="name">Stock Package Report Action</field>
            <field name="res_model">stock.package.report</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="stock_package_report_menu" name="Stock Package Report" action="stock_package_report_action" parent="ev_stock_transfer.menu_stock_warehouse_internal" sequence="20"/>

    </data>
</odoo>
