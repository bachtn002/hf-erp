<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_statement_import_form" model="ir.ui.view">
            <field name="name">account_statement_import_form</field>
            <field name="model">account.statement.import.line</field>
            <field name="arch" type="xml">
                <form string="Upload" editable="True">
                    <group>
                        <field name="account_statement_file"/>
                    </group>
                    <footer>
                        <button name="import_account_statement_xlrd" string="Submit" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="account_statement_import_act" model="ir.actions.act_window">
            <field name="name">Upload File</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.statement.import.line</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_statement_import_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>