<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_branch_rule" model="ir.rule">
            <field name="name">Account Move Branch</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('ev_branch.group_branch_user'))]"/>
        </record>

        <record id="account_move_branch_manager_rule" model="ir.rule">
            <field name="name">Account Move Branch Manager</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('branch_id','in',[branch.id for branch in user.branch_ids])]</field>
            <field name="groups" eval="[(4, ref('ev_branch.group_branch_user_manager'))]"/>
        </record>

        <record id="account_move_line_branch_rule" model="ir.rule">
            <field name="name">Account Move Line Branch</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="domain_force">[('branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('ev_branch.group_branch_user'))]"/>
        </record>

        <record id="account_move_line_branch_manager_rule" model="ir.rule">
            <field name="name">Account Move Line Branch Manager</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="domain_force">[('branch_id','in',[branch.id for branch in user.branch_ids])]</field>
            <field name="groups" eval="[(4, ref('ev_branch.group_branch_user_manager'))]"/>
        </record>

        <record id="account_payment_branch_rule" model="ir.rule">
            <field name="name">Account Payment Branch</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('ev_branch.group_branch_user'))]"/>
        </record>

        <record id="account_payment_branch_manager_rule" model="ir.rule">
            <field name="name">Account Payment Branch Manager</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('branch_id','in',[branch.id for branch in user.branch_ids])]</field>
            <field name="groups" eval="[(4, ref('ev_branch.group_branch_user_manager'))]"/>
        </record>
    </data>
</odoo>
