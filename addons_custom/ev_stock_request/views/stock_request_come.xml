<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="stock_request_come_form_view" model="ir.ui.view">
            <field name="name">Request Form</field>
            <field name="model">stock.request</field>
            <field name="arch" type="xml">
                <form duplicate="0">
                    <header>
                        <button name="action_transfer" states="approve" string="Confirm" type="object"
                                class="oe_highlight"/>
                        <button name="button_cancel" states="done" string="Cancel" type="object"
                                class="oe_highlight" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="approve,done"
                               readonly="1"/>
                    </header>
                    <sheet>
                        <div>
                            <div class="oe_button_box" name="button_box" attrs="{'invisible': [('type', '!=', 'transfer')]}">
                                <button name="action_view_transfer"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    attrs="{'invisible': [('transfer_count', '=', 0)]}">
                                    <field name="transfer_count" widget="statinfo" string="Transfer Out"/>
                                </button>
                            </div>
                            <div class="oe_button_box" name="button_box" attrs="{'invisible': [('type', '=', 'transfer')]}">
                                <button name="action_view_picking"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    attrs="{'invisible': ['|',('picking_count', '=', 0), ('type', '=', 'other_output')]}">
                                    <field name="picking_count_in" widget="statinfo" string="Picking In"/>
                                </button>
                                <button name="action_view_picking"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    attrs="{'invisible': ['|',('picking_count', '=', 0), ('type', '=', 'other_input')]}">
                                    <field name="picking_count" widget="statinfo" string="Picking out"/>
                                </button>
                            </div>
                            <div>
                                <h3 class="text-center">Request Come</h3>
                                <h3 class="text-center">
                                    <field name="name" readonly="1" required="1"
                                           style="margin-right: 35%%; margin-left: 35%%; max-width: 30%%; font-style: italic;"
                                           placeholder="Number"/>
                                </h3>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="warehouse_id" attrs="{'invisible':[('type','!=','transfer')]}" readonly="1"/>
                                <field name="warehouse_dest_id" readonly="1"
                                       options="{'no_create': 1, 'no_create_edit': 1}"
                                       domain="[('x_is_supply_warehouse', '!=', True)]"
                                />
                                <field name="location_id" attrs="{'invisible':[('type','=','transfer')]}" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_request" readonly="1"/>
                                <field name="company_id" readonly="1" force_save="1"/>
                                <field name="note" placeholder="Note" readonly="1"/>
                                <field name="type" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="line_ids" model="tree" readonly="1">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="product_id" readonly="1"/>
                                        <field name="uom_id" readonly="1"/>
                                        <field name="qty" readonly="1" force_save="1" decoration-success="1"/>
                                        <field name="qty_apply" readonly="1" force_save="1" decoration-success="1" attrs="{'invisible':[('parent.type','!=','transfer')]}"/>
                                        <field name="note" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="stock_request_come_tree_view" model="ir.ui.view">
            <field name="name">Request Tree</field>
            <field name="model">stock.request</field>
            <field name="arch" type="xml">
                <tree default_order='name desc' decoration-info="state == 'draft'"
                      decoration-muted="state in ('cancel')" decoration-success="state == 'approve'"
                      decoration-danger="state not in ('cancel','done','draft')">
                    <field name="name"/>
                    <field name="warehouse_id" attrs="{'invisible':[('type','!=','transfer')]}"/>
                    <field name="location_id"/>
                    <field name="warehouse_dest_id"/>
                    <field name="date_request"/>
                    <field name="state"/>
                    <field name="type" invisible="1"/>
                </tree>
            </field>
        </record>

        <!--yeucauden-->
        <record id="stock_request_come_action" model="ir.actions.act_window">
            <field name="name">Request come</field>
            <field name="res_model">stock.request</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="stock_request_come_tree_view"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_request_come_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('stock_request_come_form_view')})]"/>
            <field name="context">{'create':False,'delete':False,'receive': True}</field>
            <field name="domain">[('state','in',('approve','done'))]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Waiting for a new Request come.
                </p>
            </field>
        </record>

        <menuitem id="menu_stock_request_come_action" parent="menu_stock_request_goods" sequence="2"
                  groups="stock.group_stock_user"
                  action="stock_request_come_action"/>
    </data>
</odoo>