<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_slide_channel_form">
            <field name="name">slide.channel.view.form</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//notebook//page[@name='options']//group//group[@name='course']//field[@name='website_id']" position="after">
                    <field name="x_day_to_complete"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
