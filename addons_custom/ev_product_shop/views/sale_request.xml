<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_sale_request_form_inherit">
            <field name="name">view_sale_request_form_inherit</field>
            <field name="model">sale.request</field>
            <field name="inherit_id" ref="ev_sale_request.sale_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_request_line']//field[@name='product_id']" position="replace">
                    <field name="product_id" required="1"
                           attrs="{'readonly': [('parent.state', '!=', 'draft')]}"
                           options="{'no_create': True,'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>