<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_rule_form_inherit" model="ir.ui.view">
        <field name="name">stock.rule.form.inherit</field>
        <field name="model">stock.rule</field>
        <field name="inherit_id" ref="stock.view_stock_rule_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="options">{'no_create':1, 'no_create_edit':1,'no_open': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='route_id']" position="attributes">
                <attribute name="options">{'no_create':1, 'no_create_edit':1,'no_open': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='warehouse_id']" position="attributes">
                <attribute name="options">{'no_create':1, 'no_create_edit':1,'no_open': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='propagate_warehouse_id']" position="attributes">
                <attribute name="options">{'no_create':1, 'no_create_edit':1,'no_open': 1}</attribute>
            </xpath>
        </field>
    </record>
</odoo>