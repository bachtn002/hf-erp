<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="ev_pos_promotion_discount_condition_promotion_form_view" model="ir.ui.view">
            <field name="name">ev_pos_promotion_discount_condition_promotion_form_view</field>
            <field name="model">pos.promotion</field>
            <field name="inherit_id" ref="ev_pos_promotion.pos_promotion_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='promotion_detail']" position="inside">
                    <group name="discount_condition_condition" string="Condition"
                           attrs="{'invisible': [('type', '!=', 'discount_condition')]}">
                        <field name="promotion_discount_condition_ids" nolabel="1"
                               attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom">
                                <!--								<field name="category_id"-->
                                <!--								       options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>-->
                                <field name="product_id" domain="[('available_in_pos','=',True)]"
                                       options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
<!--                                <field name="uom_id"/>-->
                                <field name="qty"/>
                                <!--                                <field name="total_amount"/>-->
                            </tree>
                        </field>
                    </group>
                    <group name="discount_condition_apply" string="Apply"
                           attrs="{'invisible': [('type', '!=', 'discount_condition')]}">
                        <field name="promotion_discount_apply_ids" nolabel="1"
                               attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <tree editable="bottom">
                                <!--								<field name="category_id"-->
                                <!--								       options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>-->
                                <field name="product_id" domain="[('available_in_pos','=',True)]"
                                       options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                                <field name="check_discount_price"/>
                                <field name="price_unit"
                                       attrs="{'invisible': [('check_discount_price','not in',('price'))]}"/>
                                <field name="discount"
                                       attrs="{'invisible': [('check_discount_price','not in',('discount'))]}"/>
                                <field name="apply_type" required="1"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
