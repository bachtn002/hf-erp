        <!--        In từng tem 1 lẻ bên Lô/sê-ri-->
        <template id="stock_production_lot_temp_printing" name="Print Stamp">
            <t t-call="web.basic_layout">
                <html>
                    <head>
                        <title>
                            <t t-esc="report_title"/>
                        </title>
                        <style type="text/css">
                            .print-tem{
                            width: 100mm;
                            height: 148mm;
                            border: 1px solid #ccc;
                            font-family: arial;
                            }
                            .barcode-product{
                            float:left;
                            width: 95mm;
                            height: auto;
                            border-bottom: 1px solid #000000;
                            margin-top: 10mm;
                            margin-bottom: 10mm;
                            position: relative;
                            }
                            .barcode{
                            max-width: 100%;
                            margin: 15px auto;
                            }
                            .barcode img {
                            max-width: 100%;
                            }
                            .infor{
                            float:left;
                            margin-top: 10mm;
                            margin-left: 7mm;
                            transform: rotate(90deg);
                            }
                            .infor h3{
                            text-align:center;
                            margin-bottom: 4mm;
                            font-size: 52px;
                            font-weight: 100;
                            }
                            .desc p{
                            text-align:center;
                            margin: 0;
                            margin-top: 20px;
                            font-size: 22px;
                            }
                            .barcode_p{
                            position: relative;
                            height: 93px;
                            width: 360px;
                            overflow-y: hidden;
                            }
                            .barcode_p img{
                            position: absolute;
                            top: -66px;
                            }
                            .barcode p{
                            margin: 10px 0px;
                            text-align: center;
                            font-size: 20px;
                            }
                            .barcode{
                            float: left;
                            width: 320px;
                            }
                            .qrcode{
                            position:absolute;
                            left: 284px;
                            top: 10px;
                            }
                        </style>
                    </head>
                    <body>
                        <div class="print-tem">
                            <div class="barcode-product">
                                <div class="barcode">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=0' % ('Code128', lot_id.name, 2000, 300)"/>
                                    <p>
                                        <t t-esc="lot_id.name"/>
                                    </p>
                                </div>
                                <div class="qrcode">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('QR',lot_id.name, 75, 75)"/>
                                </div>
                                <div style="clear:both"></div>
                            </div>
                            <div class="infor">
                                <t t-if="lot_id.product_id.barcode">
                                    <h3>
                                        <t t-esc="lot_id.product_id.barcode"/>
                                    </h3>
                                    <div class="barcode_p">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=0' % ('Code128', lot_id.product_id.barcode, 360, 160)"/>
                                    </div>
                                </t>
                                <t t-elif="lot_id.product_id.default_code">
                                    <h3>
                                        <t t-esc="lot_id.product_id.default_code"/>
                                    </h3>
                                    <div class="barcode_p">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=0' % ('Code128', lot_id.product_id.default_code, 360, 160)"/>
                                    </div>
                                </t>
                                <div class="desc">
                                    <p>
                                        [<t t-esc="lot_id.product_id.default_code"/>]
                                        <t t-esc="lot_id.product_id.name"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <script type="text/javascript">
                            window.addEventListener('load', function(){
                            window.print();
                            })
                        </script>
                        <p style="page-break-before:always;"></p>
                    </body>
                </html>
            </t>
        </template>
