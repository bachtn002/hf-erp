<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="ev_internal_layout_stock_picking_in">
            <div class="article">
                <t t-raw="0"/>
            </div>
        </template>
        <template id="report_template_stock_picking_in_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="ev_stock_picking.ev_internal_layout_stock_picking_in" t-lang="en_US">
                        <div class="page" style="font-size:14px; font-family: Times New Roman">
                            <style>
                                .table {
                                border-collapse: collapse;
                                width:100%
                                }
                                .table > tbody > tr > th {border: 1px solid black; padding: 5px;}
                                .table > tbody > tr > td {border: 1px solid black; padding: 5px;}
                                .table > tr {border: 1px solid black; padding: 5px;}
                                .table > tr > td {border: 1px solid black; padding: 5px;}
                            </style>
                            <table style="width: 100%;">
                                <tbody>
                                    <tr>
                                        <td width="60%">
                                            <div style="padding-right:20px;font-size:16px">
                                                <span t-esc="o.company_id.name" style="text-transform: uppercase;"/>
                                                <br/>
                                                <span t-esc="o.company_id.street"/>
                                            </div>
                                        </td>
                                        <td width="40%">
                                            <div style="text-align: center;padding-left: 30px;">
                                                <p style="font-size:14px; font-weight: bold; margin: 0px;">
                                                    <b>Mẫu số: 01 - VT</b>
                                                </p>
                                                <p style="font-size:14px; margin: 0px;">
                                                    <i>(Ban hành theo Thông tư số: 200/2014/TT-BTC</i>
                                                </p>
                                                <p style="font-size:14px; margin: 0px;">
                                                    <i>Ngày 22/12/2014 của Bộ Tài chính)</i>
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br clear="both"/>
                            <div style="width: 100%;">
                                <div style="width: 100%; margin-top: 10px; padding: 5px; float: left;">
                                    <div style="width: 100%; text-align: center; margin: 0px; padding: 0px;font-size:16px;">
                                        <table style="width: 100%;">
                                            <tr>
                                                <td width="35%" rowspan="2" style="margin:0px; padding: 0px">
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=0' % ('Code128', o.name.upper(), 250, 50)"/>
                                                    <p>
                                                        <b>
                                                            <span t-field="o.name"/>
                                                        </b>
                                                    </p>
                                                </td>
                                                <td width="30%" style="text-align: center">
                                                    <h3 style="margin-top: 0px;text-align: center; font-weight: 500; margin: 0px;font-size:22px;">
                                                        <b style="margin-left: 25px">PHIẾU NHẬP KHO</b>
                                                    </h3>
                                                    <i>
                                                        <t t-if="o.date_done">
                                                            <b>
                                                                Ngày
                                                                <span t-esc="o.date_done.strftime('%d')"/>
                                                                tháng
                                                                <span t-esc="o.date_done.strftime('%m')"/>
                                                                năm
                                                                <span t-esc="o.date_done.strftime('%Y')"/>
                                                            </b>
                                                        </t>
                                                    </i>
                                                </td>
                                                <td width="35%" style="text-align: center;vertical-align:bottom">
                                                    <p style="margin-bottom: 0rem!important;">Nợ: 1561</p>
                                                    <p style="margin-bottom: 0rem!important;">Có: 331</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <br clear="both"/>
                            <br clear="both"/>
                            <div>
                                <div style="width: 100%; float: left;font-size:14px; margin: 0px; padding:0px;">
                                    - Họ và tên người giao:
                                    <span t-esc="o.partner_id.name"/>
                                </div>
                                <div style="width: 100%; float: left;font-size:14px; margin: 0px; padding:0px;">
                                    - Tham chiếu:
                                    <span t-esc="o.origin"/>
                                </div>
                            </div>
                            <div style="width: 70%;float: left;font-size:14px;margin: 0px;padding:0px;display: flex;justify-content: space-between;">
                                <table style="width:100%;  padding:0px">
                                    <tr width="100%" style="text-align: left; margin-top: 5px">
                                        <td>
                                            - Nhập tại kho:
                                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                                        </td>
                                        <td/>
                                        <td>
                                            - Địa điểm:
                                            <span t-field="o.location_dest_id.name"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <br clear="both"/>
                            <table class="table" style="width: 99%;height: 30px; margin-top: 10px">
                                <tbody>
                                    <tr>
                                        <th width="6%" rowspan="2"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">STT</p>
                                        </th>
                                        <th width="6%" rowspan="2" style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Mã sản phẩm</p>
                                        </th>
                                        <th width="28%" rowspan="2"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Tên, nhãn hiệu, quy cách, phẩm chất
                                                vật tư, dụng cụ,sản phẩm, hàng hóa
                                            </p>
                                        </th>
                                        <th width="10%" rowspan="2"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Đơn vị tính</p>
                                        </th>
                                        <th width="20%" colspan="2"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Số lượng</p>
                                        </th>
                                        <th width="15%" rowspan="2"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Đơn giá</p>
                                        </th>
                                        <th width="15%" rowspan="2"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Thành tiền</p>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th width="10%"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Theo chứng từ</p>
                                        </th>
                                        <th width="10%"
                                            style="vertical-align : middle;text-align:center;">
                                            <p style="padding:2px; margin: 2px;">Thực nhập</p>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th style="text-align: center;">A</th>
                                        <th style="text-align: center;">B</th>
                                        <th style="text-align: center;">C</th>
                                        <th style="text-align: center;">D</th>
                                        <th style="text-align: center;">1</th>
                                        <th style="text-align: center;">2</th>
                                        <th style="text-align: center;">3</th>
                                        <th style="text-align: center;">4</th>
                                    </tr>
                                    <t t-set="total_amount" t-value="0"/>
                                    <t t-set="number" t-value="1"/>
                                    <tr t-foreach="o.move_ids_without_package.filtered(lambda l: l.state != 'cancel')"
                                        t-as="l"
                                        style="padding:1px; margin: 1px">
                                        <t t-set="number" t-value="number+1"/>
                                        <td id="td1" style="text-align:center">
                                            <t t-esc="number-1"/>
                                        </td>
                                        <td style="text-align:left">
                                            <span t-esc="l.product_id.default_code"/>
                                        </td>
                                        <td style="text-align:left">
                                            <span t-esc="l.product_id.name"/>
                                        </td>
                                        <t t-if="l.purchase_line_id">
                                            <td style="text-align:center">
                                                <span t-esc="l.purchase_line_id.product_uom.name"/>
                                            </td>
                                            <td style="text-align:right">
                                                <t t-if="int('{:,.2f}'.format(l.purchase_line_id.product_uom_qty).replace('.',',').split(',')[1]) >0">
                                                    <span t-esc="'{0:,.2f}'.format(l.purchase_line_id.product_uom_qty)"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="'{0:,.0f}'.format(l.purchase_line_id.product_uom_qty)"/>
                                                </t>

                                            </td>
                                            <td style="text-align:right">
                                                <t t-if="int('{:,.2f}'.format(l.quantity_done).replace('.',',').split(',')[1]) >0">
                                                    <span t-esc="'{0:,.2f}'.format(l.quantity_done)"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="'{0:,.0f}'.format(l.quantity_done)"/>
                                                </t>
                                            </td>
                                            <!--										Đơn giá-->
                                            <td style="text-align:right">
                                                <span t-esc="'{0:,.0f}'.format(l.purchase_line_id.price_unit)"/>
                                            </td>
                                            <!--										Thành tiền-->
                                            <td style="text-align:right">
                                                <span t-esc="'{0:,.0f}'.format(l.purchase_line_id.price_unit * l.quantity_done)"/>
                                            </td>
                                            <!--											Tổng Thành tiền và đơn giá-->
                                            <t t-set="total_amount"
                                               t-value="total_amount + l.purchase_line_id.price_unit * l.quantity_done"/>
                                        </t>
                                        <t t-else="">
                                            <td style="text-align:center">
                                                <span t-esc="l.product_uom.name"/>
                                            </td>
                                            <td style="text-align:right">
                                                <t t-if="int('{:,.2f}'.format(l.product_uom_qty).replace('.',',').split(',')[1]) >0">
                                                    <span t-esc="'{0:,.2f}'.format(l.product_uom_qty)"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="'{0:,.0f}'.format(l.product_uom_qty)"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right">
                                                <t t-if="int('{:,.2f}'.format(l.quantity_done).replace('.',',').split(',')[1]) >0">
                                                    <span t-esc="'{0:,.2f}'.format(l.quantity_done)"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="'{0:,.0f}'.format(l.quantity_done)"/>
                                                </t>
                                            </td>
                                            <!--										Đơn giá-->
                                            <td style="text-align:right">
                                                <span t-esc="'{0:,.0f}'.format(l.price_unit)"/>
                                            </td>
                                            <!--										Thành tiền-->
                                            <td style="text-align:right">
                                                <span t-esc="'{0:,.0f}'.format(l.price_unit * l.quantity_done)"/>
                                            </td>
                                            <!--											Tổng Thành tiền và đơn giá-->
                                            <t t-set="total_amount"
                                               t-value="total_amount + l.price_unit * l.quantity_done"/>
                                        </t>
                                    </tr>
                                    <tr>
                                        <td/>
                                        <td style="text-align: center;">
                                            <b>Cộng</b>
                                        </td>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td/>
                                        <td style="text-align: right">
                                            <b>
                                                <span t-esc="'{0:,.0f}'.format(total_amount)"/>
                                            </b>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br clear="both"/>
                            <div>
                                <div style="width: 100%; float: left;font-size:14px; margin: 0px; padding:0px;">
                                    - Tổng số tiền (Viết bằng chữ):
                                    <b>
                                        <span t-esc="o.number_to_text(total_amount)"/>
                                    </b>
                                </div>
                                <div style="width: 100%; float: left;font-size:14px; margin: 0px; padding:0px;">
                                    - Số chứng từ gốc kèm theo:
                                </div>
                            </div>
                            <br clear="both"/>
                            <table style="width:100%;  padding:0px; margin: 0px">
                                <tr width="100%" style="text-align: center">
                                    <td width="25%">
                                    </td>
                                    <td width="25%">
                                    </td>
                                    <td width="20%">
                                    </td>
                                    <td width="30%">
                                        <span style="font-style:italic">
                                            Ngày
                                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d')"/>
                                            tháng
                                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m')"/>
                                            năm
                                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y')"/>
                                        </span>
                                    </td>
                                </tr>
                                <tr width="100%" style="text-align: center">
                                    <td width="25%">
                                        <b>Người lập phiếu</b>
                                        <br/>
                                        <p style="font-style:italic">(Ký, họ tên)</p>
                                    </td>
                                    <td width="25%">
                                        <b>Người giao hàng</b>
                                        <br/>
                                        <p style="font-style:italic">(Ký, họ tên)</p>
                                    </td>
                                    <td width="20%">
                                        <b>Thủ kho</b>
                                        <br/>
                                        <p style="font-style:italic">(Ký, họ tên)</p>
                                    </td>
                                    <td width="30%">
                                        <b>Kế toán trưởng</b>
                                        <br/>
                                        <b>(Hoặc bộ phận có nhu cầu nhập)</b>
                                        <br/>
                                        <P style="font-style:italic">(Ký, họ tên)</P>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperformat_qweb_stock_picking" model="report.paperformat">
            <field name="name">A4 Stock Picking</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">8</field>
            <field name="margin_bottom">8</field>
            <field name="margin_left">6</field>
            <field name="margin_right">6</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="qweb_stock_picking_in" model="ir.actions.report">
            <field name="name">Stock Picking In</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ev_stock_picking.report_template_stock_picking_in_view</field>
            <field name="report_file">ev_stock_picking.report_template_stock_picking_in_view</field>
            <field name="paperformat_id" ref="ev_stock_picking.paperformat_qweb_stock_picking"/>
            <field name="print_report_name">'Picking In - %s' % (object.name)</field>
        </record>
    </data>
</odoo>