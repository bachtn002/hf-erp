<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="abstract_loan_refund_form_view" model="ir.ui.view">
			<field name="name">abstract.loan.refund.form</field>
			<field name="model">abstract.loan.refund</field>
			<field name="arch" type="xml">
				<form string="Loan Refund">
					<header>
						<button name="action_confirm" states="draft"
							string="Confirm" type="object" />
						<button name="action_draft" states="cancelled"
							string="Set to Draft" type="object" />
						<button name="action_refund_register_wizard"
							states="confirmed" string="Register Refund" class="oe_highlight"
							type="object" help="Register a Refund payment" />
						<button name="action_cancel" states="confirmed,paid"
							string="Cancel" type="object" />
						<field name="state" widget="statusbar"
							statusbar_visible="draft,confirmed,paid,cancelled" />
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="action_view_moves" type="object"
								class="oe_stat_button" icon="fa-bars"
								attrs="{'invisible': [('moves_count', '=', 0)]}">
								<field name="moves_count" widget="statinfo"
									string="Journal Entries" />
							</button>
						</div>
						<div class="oe_title">
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="amount" />
								<field name="paid_amount" />
								<field name="to_pay_amount" />
								<field name="currency_id"
									groups="base.group_multi_currency" />
								<field name="date" />
								<field name="date_maturity" />
							</group>
							<group name="grp_org">
							</group>
						</group>
						<notebook>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="activity_ids" widget="mail_activity"/>
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record id="abstract_loan_refund_tree_view" model="ir.ui.view">
			<field name="name">abstract.loan.refund.tree</field>
			<field name="model">abstract.loan.refund</field>
			<field name="arch" type="xml">
				<tree string="Loan Refunds"
					decoration-muted="state=='cancelled'">
					<field name="name" />
					<field name="amount" />
					<field name="currency_id" groups="base.group_multi_currency" />
					<field name="date" />
					<field name="date_maturity" />
					<field name="state" />
				</tree>
			</field>
		</record>
		<record id="abstract_loan_refund_simple_tree_view"
			model="ir.ui.view">
			<field name="name">abstract.loan.refund.tree.simple</field>
			<field name="model">abstract.loan.refund</field>
			<field name="arch" type="xml">
				<tree string="Loan Refunds" editable="bottom">
					<field name="name" />
					<field name="amount" />
					<field name="currency_id" groups="base.group_multi_currency" />
					<field name="date" />
					<field name="date_maturity" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="abstract_loan_refund_pivot_view" model="ir.ui.view">
			<field name="name">abstract.loan.refund.pivot</field>
			<field name="model">abstract.loan.refund</field>
			<field name="arch" type="xml">
				<pivot string="Loan Refunds">
					<field name="date" type="col" />
					<field name="amount" type="measure" />
				</pivot>
			</field>
		</record>

		<record model="ir.ui.view"
			id="abstract_loan_refund_search_view">
			<field name="name">abstract.loan.refund.search</field>
			<field name="model">abstract.loan.refund</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" />
					<field name="date" />
					<field name="date_maturity" />
					<separator />
					<filter name="ftr_draft" string="Draft"
						domain="[('state','=','draft')]" />
					<filter name="ftr_confirmed" string="Confirmed"
						domain="[('state','=','confirmed')]" />
					<filter name="ftr_partially_paid" string="Partially Paid"
						domain="[('state','=','confirmed'),('paid_amount','&gt;',0)]" />
					<filter name="ftr_paid" string="Paid"
						domain="[('state','=','paid')]" />					
					<filter name="ftr_cancelled" string="Cancelled"
						domain="[('state','=','cancelled')]" />
					<separator />
					<group expand="1" string="Group By">
						<filter string="Partner" name="grp_partner"
							context="{'group_by':'partner_id'}" />

						<filter string="Currency" name="grp_currency"
							context="{'group_by':'currency_id'}"
							groups="base.group_multi_currency" />
						<filter string="Company" name="grp_company"
							context="{'group_by':'company_id'}"
							groups="base.group_multi_company" />
						<separator />
						<filter string="Confirmation Date"
							name="grp_date_confirmed"
							context="{'group_by':'date_confirmed'}"
							help="Group Loan Refunds by Confirmation Date" />
						<filter string="Due Date"
							name="grp_date_maturity"
							context="{'group_by':'date_maturity'}"
							help="Group Loan Refunds by Due Date" />
					</group>
				</search>
			</field>
		</record>

	</data>
</odoo>