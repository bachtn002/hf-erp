<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loan_borrow_order_print_unc_wizard_form" model="ir.ui.view">
        <field name="name">wizard_loan_borrowing_order_unc_view_form</field>
        <field name="model">loan.borrowing.order.unc</field>
        <field name="arch" type="xml">
            <form>
                <field name="disbursement_id" invisible="1"/>
                <group>
                    <group>
                        <field name="partner_id" required="1"/>
                    </group>
                    <group>
                        <field name="x_bank_id" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_unc" type="object" string="Print UNC"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>