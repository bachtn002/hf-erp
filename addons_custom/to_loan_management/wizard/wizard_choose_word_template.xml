<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_choose_word_template_view_form" model="ir.ui.view">
        <field name="name">wizard_choose_word_template_view_form</field>
        <field name="model">wizard.choose.word.template</field>
        <field name="arch" type="xml">
            <form>
                <field name="refund_payment_id" invisible="1"/>
                <field name="file_name" invisible="1"/>
                <group>
                    <field name="word_template_id"
                           domain="[('file_name', 'in', ['uy_nhiem_chi.docx', 'uy_nhiem_chi_vcb.docx', 'uy_nhiem_chi_vtb.docx'])]"
                           options="{'no_create': True, 'no_open': True}"
                           required="1"/>
                </group>
                <footer>
                    <button name="action_print_template" type="object" string="Print"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>