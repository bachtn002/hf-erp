<odoo>
    <data>
        <record id="product_barcode_view_form" model="ir.ui.view">
            <field name="name">product.barcode.view.form</field>
            <field name="model">product.barcode</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="product_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1"/>
                            </group>
                            <group>
                                <field name="qty"/>
                                <field name="notes"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_barcode_view_tree" model="ir.ui.view">
            <field name="name">product.barcode.view.tree</field>
            <field name="model">product.barcode</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="notes"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="product_barcode_action" model="ir.actions.act_window">
            <field name="name">Product Barcode</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.barcode</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
      <menuitem id="product_barcode_menu" name="Product Barcode" parent="stock.menu_stock_inventory_control"
                sequence="102" action="product_barcode_action"/>
    </data>
</odoo>