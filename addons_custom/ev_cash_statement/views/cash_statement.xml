<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cash_statement_form" model="ir.ui.view">
            <field name="name">cash.statement.form</field>
            <field name="model">cash.statement</field>
            <field name="arch" type="xml">
                <form string="Cash statement">
                    <sheet>
                        <group>
                            <group>
                                <field name="pos_session_id"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="denominations"/>
                                <field name="quantity"/>
                                <field name="amount" widget="integer"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="cash_statement_act" model="ir.actions.act_window">
            <field name="name">cash statement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cash.statement</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>
