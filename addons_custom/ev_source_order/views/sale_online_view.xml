<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_online_source_order_inherit" model="ir.ui.view">
            <field name="name">Sale Online Source Order Inherit</field>
            <field name="model">sale.online</field>
            <field name="inherit_id" ref="ev_sale_online.sale_online_form"/>
            <field name="arch" type="xml">
                <field name="date" position="after">
                    <field name="source_order_id"
                           attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"
                           options="{'no_create': True, 'no_create_edit': True}"/>
                </field>
                <xpath expr="//field[@name='note']" position="after">
                    <field name="home_delivery" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//page[1]" position="after">
                    <page name="delivery_sale" string="Delivery" attrs="{'invisible': [('home_delivery', '=', False)]}">
                        <group>
                            <group>
<!--                                <field name="source_order_id"-->
<!--                                       attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"-->
<!--                                       options="{'no_create': True, 'no_create_edit': True}"/>-->
                                <field name="receiver" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="receiver_phone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="address_delivery" readonly="1" force_save="1"/>
                                <field name="lat" readonly="1" force_save="1"/>
                                <field name="long" readonly="1" force_save="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>