<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="import_asset_line_import_wizard_form" model="ir.ui.view">
            <field name="name">import_asset_line_import_wizard_form</field>
            <field name="model">import.asset.line.import</field>
            <field name="arch" type="xml">
                <form string="Import a excel file">
                    <group>
                        <field name="template_file_url_default" widget="url"
                               nolabel="True" readonly="1"/>
                    </group>
                    <group name="main">
                        <field name="upload_file"/>
                    </group>

                    <footer>
                        <button name="import_asset_line_imp" type="object"
                                string="Upload" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_asset_line_import_action" model="ir.actions.act_window">
            <field name="name">Import Asset</field>
            <field name="res_model">import.asset.line.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
