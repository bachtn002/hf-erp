<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_notification_viber_form_view">
            <field name="name">res.notification.viber.form.view</field>
            <field name="model">res.notification</field>
            <field name="arch" type="xml">
                <form string="Notification Manager">
                    <header>
                        <!--                        send and re-send viber notification -->
                        <button name="action_send_viber" string="Send" type="object" states="draft"/>
                        <button name="action_send_viber" string="Retry" type="object" states="exception,cancel"/>

                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="type" readonly="1"/>
                            </group>
                            <group>
                                <field name="sent_datetime" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="message" attrs="{'readonly': [('state', 'in', ('success'))]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="res_notification_viber_tree_view">
            <field name="name">res.notification.viber.tree.view</field>
            <field name="model">res.notification</field>
            <field name="arch" type="xml">
                <tree string="Viber Notification">
                    <field name="type"/>
                    <field name="employee_id"/>
                    <field name="sent_datetime"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="res_notification_viber_filter">
            <field name="name">res.notification.viber.filter</field>
            <field name="model">res.notification</field>
            <field name="arch" type="xml">
                <search string="Viber Notification Search">
                    <field name="type"/>
                    <field name="employee_id"/>
                    <field name="sent_datetime"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <record id="res_notification_viber_action" model="ir.actions.act_window">
            <field name="name">Viber Notification</field>
            <field name="res_model">res.notification</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','viber')]</field>
            <field name="context">{}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('res_notification_viber_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('res_notification_viber_form_view')})]"/>
            <field name="search_view_id" ref="res_notification_viber_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Viber Notification. Let's create one!
                </p>
            </field>
        </record>

        <menuitem id="menu_res_notification_root" parent="base.menu_custom" name="Notification" sequence="99"/>
        <menuitem id="menu_res_notification_viber" parent="menu_res_notification_root" sequence="1" name="Viber"
                  action="res_notification_viber_action"/>
    </data>
</odoo>