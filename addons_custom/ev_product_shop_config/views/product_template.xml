<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_template_shop_form_inherit">
            <field name="name">view_product_template_shop_form_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='pos']//group" position="after">
                    <group>
                        <field name="x_pos_shop_ids"
                               attrs="{'required': [('available_in_pos','=',True), ('type','!=','service')]}"
                               domain="[('active','=',True)]"
                               options="{'no_create': True,'no_create_edit': True, 'no_open': True}">
                            <tree limit="10">
                                <field name="name"/>
                                <field name="code"/>
                            </tree>
                            <form create="0" edit="0">
                                <group>
                                    <group>
                                        <field name="code" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="name" readonly="1"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_template_is_tools_form_inherit">
            <field name="name">view_product_template_is_tools_form_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="x_is_tools"/>
                        <label for="x_is_tools"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>