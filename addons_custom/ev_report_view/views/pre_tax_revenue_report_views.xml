<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--View list-->
        <record id="pre_tax_revenue_report_tree" model="ir.ui.view">
            <field name="name">pre.tax.revenue.report.tree</field>
            <field name="model">pre.tax.revenue.report</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" edit="0">
                    <field name="shop_name"/>
                    <field name="revenue"/>
                    <field name="revenue_refund"/>
                    <field name="cost_price"/>
                    <field name="profit"/>
                </tree>
            </field>
        </record>

        <record id="pre_tax_revenue_report_search" model="ir.ui.view">
            <field name="name">pre.tax.revenue.report.search</field>
            <field name="model">pre.tax.revenue.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="shop_name"/>
                </search>
            </field>
        </record>

        <!--Form input-->
        <record id="report_pre_tax_revenue_wizard_form" model="ir.ui.view">
            <field name="name">pre.tax.revenue.report.wizard.form</field>
            <field name="model">pre.tax.revenue.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Pre Tax Renvenue">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date" required="1"/>
                            </group>
                            <group>
                                <field name="to_date" required="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_report" type="object" class="oe_highlight" string="View Report"/>
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pre_tax_revenue_report_action" model="ir.actions.act_window">
            <field name="name">Pre tax revenue report</field>
            <field name="res_model">pre.tax.revenue.report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ev_report_view.pre_tax_revenue_report_tree"/>
            <field name="target">main</field>
        </record>

        <record id="rpt_pre_tax_revenue_atc" model="ir.actions.act_window">
            <field name="name">Pre Tax Renvenue</field>
            <field name="res_model">pre.tax.revenue.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_pre_tax_revenue_wizard_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="rpt_pre_tax_revenue"
                  name="Pre Tax Renvenue"
                  parent="account.account_reports_legal_statements_menu"
                  action="rpt_pre_tax_revenue_atc"
                  sequence="30"/>

        <record model="ir.ui.menu" id="ev_account_report_birt.rpt_pre_tax_revenue">
            <field name="action" eval="False"/>
        </record>
    </data>
</odoo>