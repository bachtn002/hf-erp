<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--        View list bao cao-->
        <record id="stock_transfer_report_view_list" model="ir.ui.view">
            <field name="name">Stock Transfer Report List</field>
            <field name="model">stock.transfer.report</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0">
                    <field name="name"/>
                    <field name="warehouse_id"/>
                    <field name="warehouse_dest_id"/>
                    <field name="default_code"/>
                    <field name="product_name"/>
                    <field name="uom"/>
                    <field name="out_quantity"/>
                    <field name="execution_time"/>
                    <field name="name_partner"/>
                </tree>
            </field>
        </record>
        <!--        Form Input-->
        <record id="stock_transfer_report_wizard_form" model="ir.ui.view">
            <field name="name">Stock Transfer Report Wizard Form</field>
            <field name="model">report.stock.transfer.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Stock Transfer Report">
                    <group>
                        <group>
                            <field name="from_date" string="From date" required="1"/>
                            <field name="to_date" string="To date" required="1"/>
                        </group>
                        <group>
                            <field name="warehouse_ids" string="Warehouse" widget="many2many_tags"
                                   options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table_report" type="object" class="oe_highlight" string="View Report"/>
                        <button name="action_print_excel" type="object" class="oe_highlight" string="Print Excel"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!--        Action View List-->
        <record id="stock_transfer_report_action" model="ir.actions.act_window">
            <field name="name">Stock Transfer Report Action</field>
            <field name="res_model">stock.transfer.report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ev_report_view.stock_transfer_report_view_list"/>
            <field name="target">main</field>
        </record>
        <!--        Action Form Input-->
        <record id="stock_transfer_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Stock Transfer Report Wizard Action</field>
            <field name="res_model">report.stock.transfer.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_transfer_report_wizard_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_stock_transfer_report_wizard"
                  name="Stock Transfer Report Wizard"
                  action="stock_transfer_report_wizard_action"
                  parent="stock.menu_warehouse_report"
                  groups="stock.group_stock_user"
                  sequence="37"
        />
        <report id="stock_transfer_report_xlsx"
                model="report.stock.transfer.report.wizard"
                string="Báo cáo tồn kho trung chuyển"
                report_type="xlsx"
                name="stock.transfer.report.wizard"
                file="stock.transfer.report.wizard"
                print_report_name="'Báo cáo tồn kho trung chuyển %s - %s' % (object.from_date, object.to_date)"
        />
    </data>
</odoo>