<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--View list-->
        <record id="bang_tinh_ccdc_tree" model="ir.ui.view">
            <field name="name">bang.tinh.ccdc.tree</field>
            <field name="model">bang.tinh.ccdc</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" edit="0">
                    <field name="tents"/>
                    <field name="mats"/>
                    <field name="ngaytinhkh"/>
                    <field name="sokyhk"/>
                    <field name="trangthai"/>
                    <field name="nguyengia"/>
                    <field name="gtbatdaukh"/>
                    <field name="gtdakh"/>
                    <field name="gtconlai"/>
                    <field name="gtkhtrongky"/>
                    <field name="gttbtrongky"/>
                </tree>
            </field>
        </record>

        <record id="bang_tinh_ccdc_search" model="ir.ui.view">
            <field name="name">bang.tinh.ccdc.search</field>
            <field name="model">bang.tinh.ccdc</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tents"/>
                    <field name="mats"/>
                </search>
            </field>
        </record>

        <!--Form input-->
        <record id="bang_tinh_ccdc_wizard_form" model="ir.ui.view">
            <field name="name">bang.tinh.ccdc.wizard.form</field>
            <field name="model">bang.tinh.ccdc.wizard</field>
            <field name="arch" type="xml">
                <form string="Spreadsheet tools">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date" required="1"/>
                            </group>
                            <group>
                                <field name="to_date" required="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_report" type="object" class="oe_highlight" string="View Report"/>
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="bang_tinh_ccdc_action" model="ir.actions.act_window">
            <field name="name">Spreadsheet tools</field>
            <field name="res_model">bang.tinh.ccdc</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ev_report_view.bang_tinh_ccdc_tree"/>
            <field name="target">main</field>
        </record>

        <record id="rpt_spreadsheet_tools_atc" model="ir.actions.act_window">
            <field name="name">Spreadsheet tools</field>
            <field name="res_model">bang.tinh.ccdc.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="bang_tinh_ccdc_wizard_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="rpt_spreadsheet_tools" name="Spreadsheet Tools"
                  parent="account.account_reports_legal_statements_menu"
                  action="rpt_spreadsheet_tools_atc"
                  sequence="33"/>

        <record model="ir.ui.menu" id="ev_account_report_birt.rpt_spreadsheet_tools">
            <field name="action" eval="False"/>
        </record>
    </data>
</odoo>