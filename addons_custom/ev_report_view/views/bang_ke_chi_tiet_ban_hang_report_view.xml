<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- View list báo cáo -->
        <record id="sale_detail_report_tree" model="ir.ui.view">
            <field name="name">Sale Detail Report form</field>
            <field name="model">sale.details.report</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" edit="0">
                    <field name="pos_shop_code"/>
                    <field name="pos_name"/>
                    <field name="order_name"/>
                    <field name="date_order"/>
                    <field name="customer"/>
                    <field name="default_code"/>
                    <field name="full_product_name"/>
                    <field name="unit"/>
                    <field name="category_name"/>
                    <field name="qty"/>
                    <field name="price_unit"/>
                    <field name="vat"/>
                    <field name="price_promotion"/>
                    <field name="amount_promotion"/>
                    <field name="discount"/>
                    <field name="product_promotion"/>
                    <field name="user_name"/>
                </tree>
            </field>
        </record>
        <!-- Form input -->
        <record id="sale_detail_report_view_form" model="ir.ui.view">
            <field name="name">sale_detail_report.view.form</field>
            <field name="model">report.sale.detail.report.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                        </group>
                        <group>
                            <field name="to_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="create_report" string="Create Report" type="object" class="btn-primary"/>
                        <button name="action_print_excel" string="Export Excel" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_detail_report_action" model="ir.actions.act_window">
            <field name="name">Sale Detail Report Action</field>
            <field name="res_model">sale.details.report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ev_report_view.sale_detail_report_tree"/>
            <field name="target">main</field>
        </record>

        <record id="sale_detail_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Sale Detail Report Wizard Action</field>
            <field name="res_model">report.sale.detail.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_detail_report_view_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_sale_detail_report_wizard"
                  name="Sale Detail Report Wizard"
                  action="sale_detail_report_wizard_action"
                  parent="ev_pos_report.menu_point_report"
                  sequence="3"/>

        <report id="sale_detail_report_wizard_xlsx"
                model="report.sale.detail.report.wizard"
                string="Bảng kê chi tiết bán hàng"
                report_type="xlsx"
                name="sale.detail.report.wizard"
                file="sale.detail.report.wizard"
                print_report_name="'Bảng kê chi tiết bán hàng %s - %s' % (object.from_date, object.to_date)"/>
    </data>
</odoo>
