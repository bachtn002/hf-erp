<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="rpt_stock_move_multi_form" model="ir.ui.view">
            <field name="name">Multi Inventory Report</field>
            <field name="model">rpt.stock.move.multi</field>
            <field name="arch" type="xml">
                <form string="Inventory Report">
                    <group>
                        <group>
                            <field name="from_date" string="From date"
                                   attrs="{'required': [('type', '=', 'general')], 'invisible': [('type', '=', 'inventory')]}"/>
                            <field name="to_date" required="1" string="To date"/>
                            <field name="type" widget="radio" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="location_ids" string="Locations" widget="many2many_tags"
                                   domain="[('usage', '=', 'internal'), ('company_id','=', company_id)]"
                                   options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="category_ids" string="Product Categories" widget="many2many_tags"
                                   options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                            <field name="product_ids" string="Products" widget="many2many_tags"
                                   options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_export_report" type="object" class="oe_highlight" string="View Report"/>
                        <button name="action_report_excel" type="object" class="oe_highlight" string="Export Excel"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- action -->
        <record id="action_rpt_stock_move_multi" model="ir.actions.act_window">
            <field name="name">Multi Inventory Report</field>
            <field name="res_model">rpt.stock.move.multi</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rpt_stock_move_multi_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        <!-- menu -->
        <menuitem id="menu_rpt_stock_move_multi"
                  name="Multi Inventory Report" action="action_rpt_stock_move_multi"
                  parent="stock.menu_warehouse_report"
                  sequence="35"/>
    </data>
</odoo>
