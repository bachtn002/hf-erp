<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="rpt_cash_statement_form" model="ir.ui.view">
            <field name="name">Report Cash Statement</field>
            <field name="model">rpt.cash.statement</field>
            <field name="arch" type="xml">
                <form string="Report Cash Statement">
                    <group>
                        <field name="date" string="Date" required="1"/>
                    </group>
                    <footer>
                        <button name="action_export_report" type="object" class="oe_highlight" string="View Report"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- action -->
        <record id="action_rpt_cash_statement" model="ir.actions.act_window">
            <field name="name">Report Cash Statement</field>
            <field name="res_model">rpt.cash.statement</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rpt_cash_statement_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        <!-- menu -->
        <menuitem id="menu_rpt_cash_statement"
                  name="Report Cash Statement" action="action_rpt_cash_statement"
                  parent="ev_pos_report.menu_point_report"
                  groups="account.group_account_user,account.group_account_invoice,account.group_account_manager,account.group_account_readonly"
                  sequence="4"/>

    </data>
</odoo>

