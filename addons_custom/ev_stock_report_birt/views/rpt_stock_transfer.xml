<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="rpt_stock_transfer_form" model="ir.ui.view">
            <field name="name">Inventory Report Stock transfer</field>
            <field name="model">rpt.stock.transfer</field>
            <field name="arch" type="xml">
                <form string="Inventory Report">
                    <group>
                        <group>
                            <field name="from_date" string="From date" required="1"/>
                            <field name="to_date" string="To date" required="1"/>
                        </group>
                        <group>
                            <field name="warehouse_ids" string="Warehouse" widget="many2many_tags"
                                   options="{'no_edit':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_export_report" type="object" class="oe_highlight" string="View Report"/>
                        <button name="action_report_excel" type="object" class="oe_highlight" string="Print Excel"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- action -->
        <record id="action_rpt_stock_transfer" model="ir.actions.act_window">
            <field name="name">Inventory Report Stock transfer</field>
            <field name="res_model">rpt.stock.transfer</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rpt_stock_transfer_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        <!-- menu -->
        <menuitem id="menu_rpt_stock_transfer"
                  name="Inventory Report Stock transfer" action="action_rpt_stock_transfer"
                  parent="stock.menu_warehouse_report"
                  groups="stock.group_stock_user"
                  sequence="36"/>

        <menuitem id="menu_rpt_stock_transfer_account"
                  name="Inventory Report Stock transfer" action="action_rpt_stock_transfer"
                  parent="menu_report_stock"
                  groups="account.group_account_invoice,account.group_account_user,account.group_account_manager"
                  sequence="10"/>
    </data>
</odoo>

