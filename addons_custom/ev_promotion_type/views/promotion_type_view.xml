<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="promotion_type_view_tree" model="ir.ui.view">
            <field name="name">promotion_type_view_tree</field>
            <field name="model">promotion.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code" />
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="promotion_type_view_form" model="ir.ui.view">
            <field name="name">promotion_type_view_form</field>
            <field name="model">promotion.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <h2 class="text-center">Loại chương trình khuyến mại</h2>
                        </div>
                        <group>
                            <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_promotion_type" model="ir.actions.act_window">
            <field name="name">Promotion Type Action</field>
            <field name="res_model">promotion.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="promotion_type_menu" name="Promotion Type" action="action_promotion_type" parent="ev_pos_promotion.menu_pos_promotion" sequence="14"/>
    </data>
</odoo>
