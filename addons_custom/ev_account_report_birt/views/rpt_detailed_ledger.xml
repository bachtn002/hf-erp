<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="rpt_detailed_ledger_view_form" model="ir.ui.view">
            <field name="name">Detailed Ledger</field>
            <field name="model">rpt.detailed.ledger</field>
            <field name="arch" type="xml">
                <form string="Detailed Ledger">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date" required="1"/>
                                <field name="to_date" required="1"/>
                            </group>
                            <group>
                                <field name="account_id"
                                       attrs="{'invisible': [('is_like', '=', True)] , 'required': [('is_like', '=', False)]}"
                                       options="{'no_create':1,'no_create_edit': 1, 'no_open': 1}"/>
                                <field name="account_is_like"
                                       attrs="{'invisible': [('is_like', '=', False)], 'required': [('is_like', '=', True)]}"/>
                                <field name="is_like"/>
                            </group>

                        </group>
                        <footer>
                            <button name="action_export_report" type="object" class="oe_highlight"
                                    string="View Report"/>
                            <!--                            <button name="action_report_excel" type="object" class="oe_highlight" string="Export Excel"/>-->
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rpt_detailed_ledger_atc" model="ir.actions.act_window">
            <field name="name">Detailed Ledger</field>
            <field name="res_model">rpt.detailed.ledger</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rpt_detailed_ledger_view_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="rpt_detailed_ledger" name="Detailed Ledger"
                  parent="account.account_reports_legal_statements_menu"
                  action="rpt_detailed_ledger_atc"
                  sequence="38"/>
    </data>
</odoo>