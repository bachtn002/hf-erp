<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="rpt_account_account_view_form" model="ir.ui.view">
            <field name="name">Report Account Account</field>
            <field name="model">report.account.account</field>
            <field name="arch" type="xml">
                <form string="Report Account Account">
                    <group>
                        <group>
                            <field name="date_from" required="1" string="From date"/>
                            <field name="date_to" required="1" string="To date"/>
                        </group>
                        <group>
                            <field name="account_id" options="{'no_edit':True,'no_create':True,'no_create_edit':True}"
                                   domain="[('company_id','=', company_id)]" required="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_export_report" type="object" class="oe_highlight" string="View Report"/>
                        <button name="action_report_excel" type="object" class="oe_highlight" string="Export Excel"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- action -->
        <record id="action_rpt_account_account" model="ir.actions.act_window">
            <field name="name">Report Account Account</field>
            <field name="res_model">report.account.account</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rpt_account_account_view_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- menu -->
        <menuitem id="menu_rpt_account_account_action" groups="account.group_account_user"
                  name="Account Account Report" action="action_rpt_account_account"
                  parent="account.account_reports_legal_statements_menu"
                  sequence="45"/>

    </data>
</odoo>
