<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="rpt_all_in_out_warehouse_view_form" model="ir.ui.view">
            <field name="name">RPT All In Out Warehosue</field>
            <field name="model">rpt.all.in.out.warehouse</field>
            <field name="arch" type="xml">
                <form string="RPT All In Out Warehosue">
                    <group>
                        <group>
                            <field name="date_from" required="1" string="From date"/>
                            <field name="date_to" required="1" string="To date"/>
                        </group>
                        <group>
                            <field name="type" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_export_report" type="object" class="oe_highlight" string="View Report"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- action -->
        <record id="action_rpt_all_in_out_warehouse" model="ir.actions.act_window">
            <field name="name">RPT All In Out Warehosue</field>
            <field name="res_model">rpt.all.in.out.warehouse</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rpt_all_in_out_warehouse_view_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- menu -->
        <menuitem id="menu_rpt_all_in_out_warehouse" groups="account.group_account_user"
                  name="RPT All In Out Warehosue" action="action_rpt_all_in_out_warehouse"
                  parent="account.account_reports_legal_statements_menu"
                  sequence="100"/>

    </data>
</odoo>