<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="rpt_vat_in_form" model="ir.ui.view">
            <field name="name">RPT VAT In</field>
            <field name="model">rpt.vat.in</field>
            <field name="arch" type="xml">
                <form string="RPT VAT In">
                    <group>
                        <group>
                            <field name="date_from" required="1" string="From date"/>

                        </group>
                        <group>
                            <field name="date_to" required="1" string="To date"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_export_report" type="object" class="oe_highlight" string="View Report"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- action -->
        <record id="action_rpt_vat_in" model="ir.actions.act_window">
            <field name="name">RPT VAT In</field>
            <field name="res_model">rpt.vat.in</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rpt_vat_in_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- menu -->
        <menuitem id="menu_rpt_vat_in" groups="account.group_account_user"
                  name="RPT VAT In" action="action_rpt_vat_in"
                  parent="account.account_reports_legal_statements_menu"
                  sequence="101"/>

    </data>
</odoo>