<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_order_report_form" model="ir.ui.view">
            <field name="name">Purchase order report</field>
            <field name="model">rpt.purchase.order</field>
            <field name="arch" type="xml">
                <form string="Purchase order report">
                    <sheet>
                        <group>
                            <field name="from_date"/>
                            <field name="to_date"/>
                        </group>
                        <footer>
                            <button name="action_export_report" type="object" class="oe_highlight" string="View Report"/>
<!--                            <button name="action_report_excel" type="object" class="oe_highlight" string="Export Excel"/>-->
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_rpt_purchase_order" model="ir.actions.act_window">
            <field name="name">Purchase order report</field>
            <field name="res_model">rpt.purchase.order</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_order_report_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="rpt_purchase_order" name="Purchase Order Report" parent="purchase.menu_purchase_root"
                  action="action_rpt_purchase_order" sequence="100"/>
    </data>
</odoo>