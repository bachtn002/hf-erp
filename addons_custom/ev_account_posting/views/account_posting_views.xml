<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Repay items -->
    <data>

        <record id="account_posting_tree_view" model="ir.ui.view">
            <field name="name">account.posting.tree</field>
            <field name="model">account.posting</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="account_date"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="account_posting_form_view" model="ir.ui.view">
            <field name="name">account.posting.form</field>
            <field name="model">account.posting</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_compute" string="Compute" type="object" states="draft"/>
                        <button name="action_cancel" string="Cancel" type="object" states="posted"/>
                        <button name="action_post" string="Post" type="object" states="draft" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                                <field name="company_id" options="{'no_create': 1}" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                                <field name="account_move_id" readonly="1" />
                            </group>
                            <group>
                                <field name="date" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                                <field name="account_date" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                                <field name="journal_id" options="{'no_create': 1}" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="line_ids" attrs="{'readonly': [('state', '=', 'posted')]}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="debit_acc_id" options="{'no_create': 1}"/>
                                        <field name="credit_acc_id" options="{'no_create': 1}"/>
                                        <field name="value"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_account_posting" model="ir.actions.act_window">
            <field name="name">Posting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.posting</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_account_posting" name="Posting" parent="account.menu_finance_entries"
                  action="action_account_posting"/>

    </data>
</odoo>
