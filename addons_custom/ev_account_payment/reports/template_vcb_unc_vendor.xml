<?xml version="1.0"?>
<odoo>
    <data>

        <template t-name="ev_account_payment.template_vcb_unc_vendor">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <style>
                            *{
                            padding:0;
                            margin:0;

                            }
                            .wrapper{
                            font-size: 11px;
                            width:99.5%;
                            height:auto;
                            border:1px solid #000;
                            margin:auto;
                            font-family: "Times New Roman";
                            border-top: none;
                            }
                            .header_a{
                            width:100%;
                            height:85px;
                            border:1px solid #000;
                            border-left: none;
                            border-bottom:none;
                            border-right: none;
                            }
                            .header1{
                            width: 32%;
                            padding-left: 5px;
                            height: 100%;
                            float: left;
                            padding-top:5px;
                            }

                            .header3{
                            width: 43%;
                            height: 100%;
                            float: left;
                            padding-top: 10px;
                            }
                            .img1{
                            width: 100%;
                            height: 98%;
                            }

                            .content{
                            width:100%;
                            height:310px;
                            border:1px solid #000;
                            border-bottom: none;
                            border-left: none;
                            border-right: none;
                            }
                            .left{
                            float: left;
                            width: 47%
                            }
                            .right{
                            float: right;
                            width: 50%
                            }
                            .content1{
                            height: 50%;
                            width: 100%;
                            float: left;
                            }
                            .content2{
                            float:left;
                            height: 50%;
                            width: 100%;
                            }
                            .content3{
                            height: 125px;
                            width: 100%;
                            }
                            .content4{
                            height: 200px;
                            width: 100%;
                            }
                            .clear{
                            clear: both;
                            }
                            .footer_a{
                            width:100%;
                            height: 125px;
                            border:1px solid #000;
                            border-bottom: none;
                            border-left: none;
                            border-right: none;
                            margin-top: 15px;
                            }
                        </style>
                        <div class="wrapper">
                            <div class="header_a">
                                <div class="header1">
                                    <img src="/ev_account_payment/static/src/img/1.jpg" class="img1"/>
                                </div>
                                <div class="header3" style="text-align: center">
                                    <div>
                                        <span style="color: #0B3B0B ;font-size: 18px;line-height: 23px;">
                                            <b>CHỨNG TỪ GIAO DỊCH</b>
                                        </span>
                                        <br/>
                                        <span style="margin-top: 3px;color:#0B3B0B; font-size: 18px;">
                                            <b>ỦY NHIỆM CHI</b>
                                            - PAYMENT ORDER
                                        </span>
                                        <p style="margin-top: 3px;text-align: left;padding-left: 20%;">Ngày(<i>Date</i>):.....................................
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <div class="clear"/>
                            <div class="content">
                                <div class="left">
                                    <div class="content1">
                                        <div style="margin: 3px 0px 0px 5px;">
                                            <div style="margin-bottom: 5px;">
                                                <b>ĐỀ NGHỊ GHI NỢ TÀI KHOẢN</b>
                                                (<i>Please Debit
                                                account</i>)
                                            </div>

                                            <div style="height: 23px; width: 100%; border:1px solid #000; border-bottom:none">
                                                <div style="margin: 3px 0px 0px 5px;">
                                                    <b>SỐ TK</b>
                                                    (<i>A/C No</i>): <b><span t-esc="o.x_account_number"/></b>
                                                </div>
                                            </div>

                                            <div style="width: 100%; border:1px solid #000; border-bottom:none">
                                                <div style="margin: 3px 0px 0px 5px;">
                                                    <b>TÊN TK</b>
                                                    (<i>A/C name</i>):
                                                    <t t-set="appliation" t-value="o.payment_id.get_applicant()"/>
                                                    <b>
                                                        <span t-esc="appliation.name"/>
                                                    </b>
                                                </div>

                                                <div style="margin: 0px 0px 0px 5px; padding-bottom:2px">
                                                    <b>ĐỊA CHỈ</b>
                                                    (<i>Address</i>):
                                                    <t t-set="appliation" t-value="o.payment_id.get_applicant()"/>
                                                    <i>
                                                        <span t-esc="appliation.street"/>
                                                    </i>
                                                </div>
                                            </div>

                                            <div style="width: 100% ;border: 1px solid #000;">
                                                <div style="margin: 3px 0px 0px 5px;">
                                                    <b>TẠI NH</b>
                                                    (<i>With Bank</i>):<b><span t-field="o.x_bank_id.name"/></b>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="clear"/>
                                    </div>
                                    <div class="content2">
                                        <div style="margin: 3px 0px 0px 5px;">
                                            <div style="margin-left:3px;margin-bottom: 5px">
                                                <b>&amp; GHI CÓ TÀI KHOẢN</b>
                                                (&amp; Credit account)
                                            </div>
                                            <div style="height: 23px; width: 100%; border:1px solid #000; border-bottom: none;">
                                                <div style="margin: 3px 0px 0px 5px;">
                                                    <b>SỐ TK</b>
                                                    (<i>A/C No</i>):
                                                    <t t-if="o.payment_id.x_partner_bank_id">
                                                        <b>
                                                            <span t-field="o.payment_id.x_partner_bank_id.acc_number"/>
                                                        </b>
                                                    </t>
                                                </div>
                                            </div>

                                            <div style="width: 100%; border:1px solid #000; border-bottom: none;">
                                                <div style="margin: 3px 0px 0px 5px">
                                                    <b>TÊN TK</b>
                                                    (<i>A/C name</i>):
                                                    <t t-if="o.payment_id.x_partner_id">
                                                        <b>
                                                            <span t-field="o.payment_id.x_partner_id.name"/>
                                                        </b>
                                                    </t>
                                                </div>

                                                <div style="margin: 3px 0px 0px 5px;padding-bottom: 2px">
                                                    <b>ĐỊA CHỈ</b>
                                                    (<i>Address</i>):
                                                    <t t-foreach="o.payment_id.x_partner_id" t-as="partner_address">
                                                        <span t-field="partner_address.street"/>
                                                    </t>
                                                </div>

                                            </div>

                                            <div style="width: 100% ;border: 1px solid #000;">
                                                <div style="margin: 3px 0px 0px 5px;">
                                                    <b>TẠI NH</b>
                                                    (<i>With Bank</i>):
                                                    <t t-if="o.payment_id.x_partner_bank_id">
                                                        <b>
                                                            <t t-set="name_bank" t-value="o._get_name_bank()"/>
                                                            <t t-if="name_bank">
                                                                <span t-esc="name_bank"/>
                                                            </t>
                                                        </b>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="float: left; width:2%"/>
                                <div class="right">
                                    <div class="content3">
                                        <div style="margin: 5px 0px 5px 0px;"><b>SỐ TIỀN</b>(<i>With amount</i>): <b
                                                style="padding-left:35%">PHÍ NH</b>(<i>Bank Charges</i>)
                                        </div>
                                        <div style="float: left; width: 73%">
                                            <div style="height: 23px;width: 98%;border: 1px solid #000;border-bottom: none;">
                                                <div style="float:left; width:46%;padding-left:5px;line-height: 23px">
                                                    <b>BẰNG SỐ</b>
                                                    (<i>In figures</i>):
                                                </div>
                                                <div style="float: left;line-height: 23px;text-align: right;padding-right: 5px;width: 40%;">
                                                    <b>
                                                        <span t-esc="'{0:,.0f}'.format(o.payment_id.x_amount_before_tax)"/>
                                                    </b>
                                                </div>
                                                <div style="float:left; width:11%; font-weight:bold; text-align:center; border-left: 1px solid;line-height: 23px">
                                                    <span t-esc="o.payment_id.currency_id.name"/>
                                                </div>
                                                <div class="clear"/>
                                            </div>
                                            <div style="height: 65px; width: 98%;border: 1px solid #000;">
                                                <div style="margin: 3px 0px 0px 5px;"><b>BẰNG CHỮ</b>:(<i>In words</i>):
                                                </div>
                                                <div style="margin: 3px 0px 0px 5px;">
                                                    <span t-esc="o.payment_id.get_amount_to_word(o.payment_id.x_amount_before_tax)"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div style="height: auto; width:27%;  float: left;  ">

                                            <div style="margin-left: 15px; height: 100px;width:auto;">
                                                <div style="float: left;">
                                                    <b>Phí trong</b>
                                                    <br/>
                                                    <i>Including</i>
                                                </div>

                                                <div style="height: 15px;width: 15px; border: 1px solid #000; float: left; margin: 5px 0px 0px 15px"/>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <div style="float: left;">
                                                    <b>Phí ngoài</b>
                                                    <br/>
                                                    <i>Excluding</i>
                                                </div>
                                                <div style="height: 15px;width: 15px; border: 1px solid #000; float: left; margin: 5px 0px 0px 15px"/>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="content4">
                                        <div style="height:30%;">
                                            <b>NỘI DUNG</b>
                                            (<i>Details of Payment</i>):
                                            <span t-field="o.payment_id.x_description"/>
                                        </div>
                                        <div style="margin-top:5px;height:50%">
                                            <div style="height: auto ;width: 34%;  float: left;">
                                                <b>KẾ TOÁN TRƯỞNG KÝ</b>
                                                <br/>
                                                <i style="margin-left: 20px;">Chief Accountant</i>
                                            </div>
                                            <div style="height: auto ;width: 65%; text-align: center; float: right;">
                                                <b>CHỦ TÀI KHOẢN KÝ VÀ ĐÓNG GIẤU</b>
                                                <br/>
                                                <i>Acc.Holder &amp; Stamp</i>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="footer_a">
                                <div>
                                    <b>
                                        <div style="margin:10px 0px 0px 5px;">
                                            <u>DÀNH CHO NGÂN HÀNG <i style="font-weight: 400;">(For Bank's Use only)</i> MÃ
                                                VAT:
                                            </u>
                                        </div>
                                    </b>
                                </div>
                                <div style="padding-top: 10px;padding-left: 230px;">
                                    <b>
                                        <div style="display:inline-block;margin-right: 130px;">Thanh toán viên</div>
                                        <div style="display:inline-block;margin-right: 130px;">Kiểm soát</div>
                                        <div style="display:inline-block">Giám đốc</div>
                                    </b>
                                </div>
                                <div class="clear"/>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperformat_account_payment_Vietcombank_report_vendor" model="report.paperformat">
            <field name="name">Vietcombank_report_vendor</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">210</field>
            <field name="page_width">148</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">80</field>
        </record>

        <report id="report_order"
                string="Report VietComBank Vendor"
                model="account.payment.unc.wizard"
                report_type="qweb-pdf"
                name="ev_account_payment.template_vcb_unc_vendor"
                file="ev_account_payment.template_vcb_unc_vendor"
                paperformat="paperformat_account_payment_Vietcombank_report_vendor"
        />

    </data>
</odoo>