<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_account_payment_vendor_unc_view_form" model="ir.ui.view">
        <field name="name">account_payment_unc_wizard_view_form</field>
        <field name="model">account.payment.unc.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="payment_id" invisible="1"/>
                <group class="text-left">
                    <field name="x_bank_id" required="1"/>
                    <field name="x_account_number"/>
                </group>
                <footer>
                    <button name="action_print_unc_vendor" type="object" string="Print UNC" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>