<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template t-name="ev_account_payment.report_vib_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">

                        <style>
                            *{
                            margin: 0;
                            padding: 0;
                            border: 0;
                            }

                            p{
                            margin:0px !important;
                            }

                            i{
                            font-size:12px;
                            }

                            /* HEADER */

                            header{
                            font-family: "Time New Roman";
                            }

                            .hd-left{
                            float:left;
                            width:50%;
                            }


                            .hd-right{
                            float:left;
                            width:50%;
                            }

                            .title-unc{
                            font-size: 18px;
                            text-transform: uppercase;
                            font-weight:bold;
                            padding-top:20px;
                            padding-bottom:10px;
                            }

                            .payment-order{
                            font-size: 12px;
                            text-transform: uppercase;
                            font-weight:400;
                            }

                            .img-logo{
                            line-height: 80px;
                            padding-left: 10px;
                            text-align: right;
                            }

                            .img-logo > img{
                            height: auto;
                            vertical-align: middle;
                            width: 100px;
                            }

                            .clf{
                            clear:both;
                            }

                            .font-13{
                            font-size:13px;
                            }

                            .font-10{
                            font-size:10px;
                            }

                            .font-11{
                            font-size:11px;
                            }

                            .font-12{
                            font-size:12px;
                            }


                            #customers td, #customers th {
                            border: 1px solid black;
                            padding-left: 5px;
                            padding-right: 5px;
                            padding-top:3px;
                            padding-bottom:3px;
                            }

                        </style>

                        <header style="width:100%!important; height:80px">
                            <div class="hd-left">
                                <h3 class="title-unc">Ủy nhiệm chi</h3>
                                <h5 class="payment-order">Payment Order</h5>
                            </div>
                            <div class="hd-right">
                                <div class="img-logo">
                                    <img src="/ev_account_payment/static/src/img/vib-logo.png"/>
                                </div>
                            </div>
                            <div class="clf"></div>
                        </header>
                        <table id="customers" style="width: 100%;border: 1px solid;border-collapse: collapse;">
                            <tr>
                                <td width="70%">
                                    <p>
                                        <b class="font-13" style="text-transform:uppercase">Đề nghị ghi nợ tài khoản</b>
                                        <span class="font-10">(Please debit account)</span>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <b class="font-13">Ngày</b>
                                        <span class="font-10">(Date)</span>
                                        <span class="font-13" t-field="o.x_date"/>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Số tài khoản</b>
                                        <span class="font-10">(A/C number)</span>
                                        <t t-set="appliation" t-value="o.get_acc_number()"/>
                                        <t t-if="appliation.bank_acc_number">
                                            <span class="font-11" style="font-weight: bold"
                                                  t-esc="appliation.bank_acc_number"/>
                                        </t>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <b class="font-12">Số tiền</b>
                                        <span class="font-10">(With amount)</span>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Tên tài khoản</b>
                                        <span class="font-10">(A/C name)</span>
                                        <t t-set="appliation" t-value="o.get_applicant()"/>
                                        <t t-if="appliation.name">
                                            <span style="text-transform: uppercase;" class="font-12"
                                                  t-esc="appliation.name"/>
                                        </t>
                                    </p>
                                </td>
                                <td rowspan="2">
                                    <p>
                                        <b class="font-12">Bằng số</b>
                                        <span class="font-12" style="font-weight:bold"
                                              t-esc="'{0:,.0f}'.format(o.x_amount_before_tax)"/>
                                        <span class="font-12" style="font-weight:bold" t-esc="o.currency_id.name"/>
                                    </p>
                                    <p class="font-10">(In figures)</p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Địa chỉ</b>
                                        <span class="font-10">(Address)</span>
                                        <t t-foreach="o.x_partner_bank_id" t-as="partner_bank">
                                            <span t-field="partner_bank.partner_id.street"/>
                                        </t>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Ngân hàng</b>
                                        <span class="font-10">(With bank)</span>
                                        <t t-foreach="o.x_partner_bank_id" t-as="partner_bank">
                                            <span class="font-12" t-field="partner_bank.bank_id.name"/>
                                        </t>
                                    </p>
                                </td>
                                <td rowspan="2">
                                    <p>
                                        <b class="font-12">Bằng chữ</b>
                                    </p>
                                    <p class="font-10">(In words)</p>
                                    <p>
                                        <span class="font-12" t-esc="o.get_amount_to_word(o.x_amount_before_tax)"/>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p class="font-13">
                                        <b style="text-transform:uppercase">Và ghi có tài khoản</b>
                                        <span class="font-10">(Please credit account)</span>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Số tài khoản</b>
                                        <span class="font-10">(A/C number)</span>
                                        <t t-foreach="o.x_partner_bank_id" t-as="partner_bank">
                                            <span class="font-12" t-field="partner_bank.acc_number"/>
                                        </t>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <b class="font-12">Phí ngân hàng</b>
                                        <span class="font-10">(Bank charges)</span>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Tên tài khoản</b>
                                        <span class="font-10">(A/C name)</span>
                                        <t t-foreach="o.x_partner_bank_id" t-as="partner_bank">
                                            <span class="font-12" t-field="partner_bank.partner_id.name"/>
                                        </t>
                                    </p>
                                </td>
                                <td rowspan="2" style="padding-bottom:0px!important;">

                                    <div style="width: 25%;float: left;">
                                        <p>
                                            <b class="font-12">Phí trong</b>
                                            <br/>
                                            <i>Including</i>
                                        </p>
                                    </div>

                                    <div style="width: 25%;float: left;">
                                        <div style="height: 15px;width: 15px; border: 1px solid #000;margin-top: 15px;"/>
                                    </div>

                                    <div style="width: 25%;float: left;">
                                        <p>
                                            <b class="font-12">Phí ngoài</b>
                                            <br/>
                                            <i>Excluding</i>
                                        </p>
                                    </div>

                                    <div style="width: 25%;float: left;">
                                        <div style="height: 15px;width: 15px; border: 1px solid #000;margin-top: 15px;"/>
                                    </div>
                                    <div class="clf"></div>


                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Địa chỉ</b>
                                        <span class="font-10">(Address)</span>
                                        <t t-if="o.x_partner_bank_id">
                                            <t t-foreach="o.x_partner_bank_id" t-as="partner_bank">
                                                <span t-field="partner_bank.bank_id.name"/>
                                            </t>
                                        </t>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Ngân hàng</b>
                                        <span class="font-10">(With bank)</span>
                                        <t t-foreach="o.x_partner_bank_id" t-as="partner_bank">
                                            <span class="font-12" t-field="partner_bank.bank_id.name"/>
                                        </t>
                                    </p>
                                </td>
                                <td rowspan="2">
                                    <p>
                                        <b class="font-13" style="text-transform:uppercase">Nội dung</b>
                                        <span class="font-10">(Details of payment)</span>
                                    </p>
                                    <p>
                                        <t t-if="o.x_description">
                                            <span class="font-12" t-esc="o.x_description"/>
                                        </t>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td height="100px;">
                                    <div style="float: left; width:60%">
                                        <p>
                                            <b class="font-13" style="text-transform:uppercase">Kế toán trưởng</b>
                                            <p class="font-10">Chief Accountant</p>
                                        </p>
                                    </div>
                                    <div style="float: left; width:40%">
                                        <b class="font-13" style="text-transform:uppercase">Chủ tài khoản ký và đóng
                                            dấu
                                        </b>
                                        <p class="font-10">A/C holder signature and stamp</p>
                                    </div>
                                    <div class="clf"></div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <p class="font-11">
                                        Để đảm bảo quyền lợi cho Quý Khách hàng, Ngân hàng VIB khuyến nghị Quý khách đọc
                                        kỹ
                                        nội dung trước khi ký và sử dụng các kênh giao dịch chính thức của VIB (Chi
                                        nhánh,
                                        ATM, Internet banking, Mobile banking).
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12" style="text-transform:uppercase">Dành cho ngân hàng</b>
                                        <span class="font-10">(For bank use only)</span>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <b class="font-12" style="text-transform:uppercase">Giao dịch viên</b>
                                        <b class="font-12" style="text-transform:uppercase; padding-left: 25%;">Kiểm
                                            soát
                                        </b>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Ngày</b>
                                        <span class="font-10">(Date)</span>
                                    </p>
                                </td>
                                <td rowspan="4">
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Số bút toán</b>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Tài khoản ghi nợ</b>
                                    </p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <p>
                                        <b class="font-12">Tài khoản ghi có</b>
                                    </p>
                                </td>
                            </tr>

                        </table>

                    </t>
                </t>
            </t>
        </template>


        <record id="paperformat_account_payment_vib_report" model="report.paperformat">
            <field name="name">BIDV_report</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">210</field>
            <field name="page_width">148</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">80</field>
        </record>

        <report
                id="report_bank_vib"
                model="account.payment"
                string="VIB_Report"
                report_type="qweb-pdf"
                name="ev_account_payment.report_vib_template"
                file="ev_account_payment.report_vib_template"
                paperformat="paperformat_account_payment_vib_report"
        />
    </data>
</odoo>

