<odoo>
    <data>
        <record id="product_process_tree_view" model="ir.ui.view">
            <field name="name">Product process tree</field>
            <field name="model">product.process</field>
            <field name="arch" type="xml">
                <tree default_order='date desc' decoration-info="state == 'draft'" decoration-muted="state == 'cancel'"
                      decoration-danger="state not in ('cancel', 'done', 'draft')">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="date_done" invisible="1"/>
                    <field name="location_id"/>
                    <field name="dest_location_id"/>
                    <field name="note"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="product_process_form_view" model="ir.ui.view">
            <field name="name">Product process form</field>
            <field name="model">product.process</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_process" class="oe_highlight" type="object" states="draft"
                                groups="stock.group_stock_user"
                                string="Process"/>
                        <button name="action_back_to_draft" type="object" states="cancel" string="Back to Draft"
                                groups="stock.group_stock_manager"/>
                        <button name="action_cancel" type="object" states="done" string="Cancel"
                                groups="ev_product_process.group_stock_cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="picking_ids" invisible="1"/>
                            <button type="object" name="action_view_delivery"
                                    class="oe_stat_button" icon="fa-truck"
                                    attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                                <field name="delivery_count" widget="statinfo" string="Transfer"/>
                            </button>
                        </div>
                        <h1 class="text-center">
                            <label for="name" string="PRODUCT PROCESS" style="font-size:20px"/>
                        </h1>
                        <h3 class="text-center">
                            <field name="name" readonly="1" required="1" attrs="{'invisible': [('name','=','/')]}"
                                   style="margin-right: 35%%; margin-left: 35%%; max-width: 30%%; font-style: italic;"
                                   placeholder="Number"/>
                        </h3>
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <!--                                <field name="branch_id" invisible="1"/>-->
                                <field name="location_id" required="1"
                                       domain="[('usage','=','internal')]"
                                       options="{'no_create':1, 'no_create_edit':1}"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="dest_location_id" domain="[('usage','=','internal')]"
                                       options="{'no_create':1, 'no_create_edit':1}"
                                       readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="1" required="1"/>
                                <field name="date_done" readonly="1" string="Date done" invisible="1"/>
                                <field name="note" attrs="{'readonly': [('state','!=','draft')]}" placeholder="Note"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="process_line_ids" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="rule_id"/>
                                        <field name="note"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="rule_id" required="1"
                                                       options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"/>
                                                <field name="name" required="1" readonly="1" force_save="1"/>
                                            </group>
                                            <group>
                                                <field name="note"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="from_detail_ids">
                                                <tree delete="0" create="0" editable="bottom">
                                                    <field name="from_process_id" invisible="1"/>
                                                    <field name="product_id" readonly="1"
                                                           options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                           force_save="1"/>
                                                    <field name="uom_id" readonly="1"
                                                           options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                           force_save="1"/>
                                                    <field name="origin_qty" invisible="1"/>
                                                    <field name="qty" required="1"/>
                                                    <field name="qty_change" invisible="1"/>
                                                    <field name="tracking" invisible="1"/>
                                                    <field name="lot_id" options="{'no_create':1, 'no_create_edit':1}"
                                                           domain="[('product_id','=',product_id)]"
                                                           attrs="{'readonly': [('tracking', '=', 'none')],'required': [('tracking', '!=', 'none')]}"/>
                                                    <field name="percent" invisible="1"/>
                                                    <field name="error_percent" invisible="1"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="product_id" readonly="1"
                                                                   options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                                   force_save="1"/>
                                                            <field name="uom_id" readonly="1"
                                                                   options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                                   force_save="1"/>
                                                        </group>
                                                        <group>
                                                            <field name="qty" required="1"/>
                                                        </group>
                                                    </group>
                                                </form>
                                            </field>
                                            <field name="to_detail_ids">
                                                <tree delete="0" create="0" editable="bottom">
                                                    <field name="to_process_id" invisible="1"/>
                                                    <field name="product_id" readonly="1"
                                                           options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                           force_save="1"/>
                                                    <field name="uom_id" readonly="1"
                                                           options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                           force_save="1"/>
                                                    <field name="origin_qty" invisible="1"/>
                                                    <field name="qty" required="1" readonly="1" force_save="1"/>
                                                    <field name="tracking" invisible="1"/>
                                                    <field name="lot_id" options="{'no_create':1, 'no_create_edit':1}"
                                                           domain="[('product_id','=',product_id)]"
                                                           attrs="{'readonly': [('tracking', '=', 'none')],'required': [('tracking', '!=', 'none')]}"/>
                                                    <field name="percent" readonly="1" force_save="1"/>
                                                    <field name="error_percent" readonly="1" force_save="1"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="product_id" readonly="1"
                                                                   options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                                   force_save="1"/>
                                                            <field name="uom_id" readonly="1"
                                                                   options="{'no_create':1, 'no_create_edit':1, 'no_open':1}"
                                                                   force_save="1"/>
                                                        </group>
                                                        <group>
                                                            <field name="qty" required="1"/>
                                                            <field name="percent" readonly="1" force_save="1"/>
                                                        </group>
                                                    </group>
                                                </form>
                                            </field>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="product_process_form_search" model="ir.ui.view">
            <field name="name">product_process_form_search</field>
            <field name="model">product.process</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Name"/>
                    <field name="location_id" string="Process at location"
                           filter_domain="[('location_id.name', 'ilike', self)]"/>
                    <field name="dest_location_id" string="Process to location"
                           filter_domain="[('dest_location_id.name', 'ilike', self)]"/>
                    <field name="warehouse_id" string="Stock Warehouse"
                           filter_domain="[('warehouse_id.name', 'ilike', self)]"/>
                </search>
            </field>
        </record>

        <record id="action_product_process" model="ir.actions.act_window">
            <field name="name">Product Process</field>
            <field name="res_model">product.process</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="product_process_form_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_product_process_action" groups="stock.group_stock_user"
                  name="Product process" action="action_product_process"
                  parent="stock.menu_stock_warehouse_mgmt" sequence="5"/>

    </data>
</odoo>