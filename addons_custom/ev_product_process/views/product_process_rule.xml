<odoo>
    <data>
        <record id="product_process_rule_form_view" model="ir.ui.view">
            <field name="name">product_process_rule_form</field>
            <field name="model">product.process.rule</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <h1 class="text-center">
                            <label for="name" string="PRODUCT PROCESS RULE" style="font-size:20px"/>
                        </h1>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="note"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Material">
                                <field name="from_rule_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create': 1, 'no_create_edit': 1}" required="1"/>
                                        <field name="uom_category_id" invisible="1"/>
                                        <field name="uom_id" required="1" domain="[('category_id','=', uom_category_id)]"
                                               options="{'no_create': 1, 'no_create_edit': 1}"/>
                                        <field name="qty" required="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Product">
                                <field name="to_rule_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create': 1, 'no_create_edit': 1}" required="1"/>
                                        <field name="uom_category_id" invisible="1"/>
                                        <field name="uom_id" required="1" domain="[('category_id','=', uom_category_id)]"
                                               options="{'no_create': 1, 'no_create_edit': 1}"/>
                                        <field name="qty" required="1"/>
                                        <field name="percent" required="1"/>
                                        <field name="error_percent"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="product_process_rule_tree_view" model="ir.ui.view">
            <field name="name">product_process_rule_tree</field>
            <field name="model">product.process.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="action_product_process_rule" model="ir.actions.act_window">
            <field name="name">Product Process rule</field>
            <field name="res_model">product.process.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
<!--        <menuitem id="menu_product_process"-->
<!--                  name="Product Process"-->
<!--                  parent="ev_stock_transfer.menu_stock_warehouse_internal" sequence="21"/>-->
        <menuitem id="menu_product_process_rule" groups="stock.group_stock_manager"
                  name="Product Process rule" action="action_product_process_rule"
                  parent="stock.menu_warehouse_config" sequence="2"/>
         <menuitem id="menu_product_process_rule_account" groups="account.group_account_user,account.group_account_manager"
                  name="Product Process rule" action="action_product_process_rule"
                  parent="account.menu_finance_entries_actions" sequence="121"/>
    </data>
</odoo>