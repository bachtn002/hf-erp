<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="check_promotion_code_form_view" model="ir.ui.view">
            <field name="name">Check Promotion code</field>
            <field name="model">check.promotion.code</field>
            <field name="arch" type="xml">
                <form string="Check Promotion code">
                    <sheet>
                        <group>
                            <div>
                                <h1 style="text-align: center;">Check Promotion code</h1>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="check" invisible="1"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <button name="check_promotion_code" type="object" string="Check" class="oe_highlight"/>
                        <!--
                        <button name="update_promotion_code" type="object" string="Update promotion status"
                                class="oe_highlight"
                                attrs="{'invisible': [('check', '=', False)]}"/>-->
                        <group>

                            <field name="promotion_use_code" readonly="1"/>
                            <field name="total_count" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="promotion_id"
                                   options="{'no_create': True,'no_create_edit': True}" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="line_ids">
                                    <tree editable="False" create="0" delete="0">
                                        <field name="order_id" readonly="1"
                                               options="{'no_create': True,'no_create_edit': True}"/>
                                        <field name="check_promotion_code_id" invisible="1"/>
                                        <field name="phone" readonly="1"/>
                                    </tree>
                                    <form create="0" edit="0">
                                        <field name="order_id" readonly="1"
                                               options="{'no_create': True,'no_create_edit': True}"/>
                                        <field name="phone" readonly="1"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="check_promotion_code_action" model="ir.actions.act_window">
            <field name="name">Check Promotion code</field>
            <field name="res_model">check.promotion.code</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="check_promotion_code_form_view"/>
            <field name="target">inline</field>
        </record>
        <menuitem id="check_promotion_code_menu"
                  action="check_promotion_code_action"
                  name="Check Promotion Code"
                  parent="ev_promotion_voucher.menu_promotion_code" sequence="200"/>
    </data>
</odoo>