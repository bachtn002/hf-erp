<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="VoucherPromotionPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text">
                <header class="title">
                    <t t-esc="props.title"/>
                </header>
                <main class="list-lines body" t-on-remove-item="removeItem"
                      t-on-create-new-item="onClickApplyPromotionCode">
                    <t t-foreach="state.array" t-as="item" t-key="item._id">
                        <EditListInput item="item"/>
                    </t>
                    <div style="margin-top:10px">
                        <i class="product-message">
                            <span t-esc="state.message" style="color: red;font-family: serif;font-weight: 100;font-size: 14px;"/>
                        </i>
                    </div>
                    <PromotionVoucherList t-if="!props.isVerifyBarcode and state.promotions.length > 0"
                                   promotions="state.promotions"/>
                </main>
                <footer class="footer">
                    <div class="button confirm" t-on-click="onClickApplyPromotionCode">
                        Ok
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>
