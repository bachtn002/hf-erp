<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="general_request_wizard_form" model="ir.ui.view">
            <field name="name">your.wizard.form</field>
            <field name="model">import.xls.wizard.general.request</field>
            <field name="arch" type="xml">
                <form string="Import a excel file">
                    <group name="main">
                        <!--                        <field name="xls_file_stock"/>-->
                        <field name="upload_file"/>
                        <field name="file_name" invisible="1"/>
                    </group>

                    <footer>
                        <button name="import_xls_general_request" type="object"
                                string="Update file " class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="general_request_wizard_action" model="ir.actions.act_window">
            <field name="name">Import Sale Request</field>
            <field name="res_model">import.xls.wizard.general.request</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
