<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="pos_order_view_pg_order_reference" model="ir.ui.view">
            <field name="name">pos_order_view_pg_order_reference</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pos_reference']" position="after">
                    <field name="pg_order_reference"/>
                </xpath>
            </field>
        </record>

        <record id="view_pos_pos_form_pg_order_reference" model="ir.ui.view">
            <field name="name">view_pos_pos_form_pg_order_reference</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page/group[@name='loyalty']" position="replace">
                    <group>
                        <group name="loyalty" string="Loyalty Programs">
                            <field name="loyalty_points" readonly='1' force_save="1"/>
                        </group>
                        <group string="Pg Order Reference">
                            <field name="pg_order_reference" readonly="1"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>