<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id='helpdesk_ticket_template_view_tree' model='ir.ui.view'>
        <field name="name">helpdesk_ticket_template_view_tree</field>
        <field name="model">helpdesk.ticket.template</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk ticket template">
                <field name="name"/>
                <field name="user_ids"/>
                <field name="ticket_type_id"/>
                <field name="create_date"/>
                <field name="description"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id='helpdesk_ticket_template_view_form' model='ir.ui.view'>
        <field name="name">helpdesk.ticket.template.view.form</field>
        <field name="model">helpdesk.ticket.template</field>
        <field name="arch" type="xml">
            <form string="Helpdesk ticket template">
                <header>
                    <button name="button_assign" string="Assign" type="object" states='draft' class="oe_highlight"/>
                    <button name="button_cancel" string="Cancel" type="object" states='draft'/>
                    <button name="button_back_to_draft" string="Back to draft" type="object" states='cancel'/>
                    <field name="state" widget="statusbar" readonly="1" statusbar_visible="draft,assigned,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" class="field_name" placeholder="Subject..." required="1" attrs="{'readonly': [('state', '!=', 'draft')]}" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="helpdesk_department_id" required="1" options="{'no_create': True, 'no_open': True}"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="domain_user_ids" invisible="1"/>
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" required="1"
                            attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('id','in',domain_user_ids)]"/>
                            <field name="ticket_type_id" required="1" options="{'no_create': True, 'no_open': True}"
                            attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('x_helpdesk_department_id','in',helpdesk_department_id)]"/>
                            <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="tag_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"
                            attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                            <field name="ref_helpdesk_ticket" widget="many2many_tags" readonly="1" />
                        </group>
                    </group>
                    <group>
                        <field name="solution_detail" widget="html" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='helpdesk_ticket_template_action' model='ir.actions.act_window'>
        <field name="name">Helpdesk Ticket Template</field>
        <field name="res_model">helpdesk.ticket.template</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="helpdesk_ticket_template_menu" name="Helpdesk ticket template"
            action="helpdesk_ticket_template_action" parent="helpdesk.menu_helpdesk_root"
              sequence="10" groups="helpdesk_ticket_assigner"/>

</odoo>
