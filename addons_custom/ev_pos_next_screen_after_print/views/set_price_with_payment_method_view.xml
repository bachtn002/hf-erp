<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pos_payment_method_form_inherit" model="ir.ui.view">
            <field name="name">ev_pos_next_screen_after_print.pos_payment_method.form</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_cash_count']" position="after">
                    <field name="is_cash_count_zero"/>
                </xpath>
            </field>
        </record>

        <record id="pos_payment_method_tree_inherit" model="ir.ui.view">
            <field name="name">ev_pos_next_screen_after_print.pos_payment_method.tree</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='is_cash_count']" position="after">
                    <field name="is_cash_count_zero"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>