<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_users_form">
            <field name="name">res.users.form.inherit.ev_helpdesk</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='references']" position="after">
                    <page name="department_ref" string="Department Helpdesk">
                        <group>
                            <group>
                                <field name="x_helpdesk_department_id" options="{'no_create': 1, 'no_edit': 1}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>