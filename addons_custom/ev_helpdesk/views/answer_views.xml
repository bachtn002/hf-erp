<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="answer_answer_form_view" model="ir.ui.view">
        <field name="name">answer.answer.form.view</field>
        <field name="model">answer.answer</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="answer_code"/>
                            <field name="name"/>
                            <field name="main_question_id" options="{'no_create': True}"/>
                            <field name="helpdesk_department_id"
                                   attrs="{'required': [('next_question_id', '=', False)]}"
                                   options="{'no_create': True}"/>
                            <field name="error_image" widget="image" class="oe_avatar" style="float:left;"/>
                            <field name="error_image_filename" invisible="1"/>
                        </group>
                        <group>
                            <field name="next_question_id" options="{'no_create': True}"/>
                            <field name="page_end_redirect"/>
                            <field name="name_url" options="{'no_create': True}"/>
                            <field name="answer_detail" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <record id="answer_answer_tree_view" model="ir.ui.view">
            <field name="name">answer.answer.tree.view</field>
            <field name="model">answer.answer</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="answer_code"/>
                    <field name="name"/>
                    <field name="main_question_id"/>
                    <field name="next_question_id"/>
                    <field name="helpdesk_department_id"/>
                </tree>
            </field>
        </record>

        <record id="answer_answer_action" model="ir.actions.act_window">
            <field name="name">Answer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">answer.answer</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="answer_answer_menu" parent="question_answer_menu" action="answer_answer_action" sequence="2"/>


    </data>
</odoo>