<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="mail_template_ticket_confirmed" model="mail.template">
            <field name="name">Odoo ticket Confirmed</field>
            <field name="model_id" ref="ev_helpdesk.model_helpdesk_ticket"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590"
                       style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590"
                                       style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                    <tr>
                                        <td valign="top" style="font-size: 13px;">
                                            <div>
                                                Dear ${object.partner_id.name},
                                                <br/>
                                                <br/>
                                                Your request ${object.name} has been received and is being
                                                assigned to ${object.user_id.name}!
                                                <br/>
                                                Thanks,
                                                <br/>
                                                ${object.team_id.name} Team.
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;">
                                            <hr width="100%"
                                                style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <!-- FOOTER -->
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590"
                                       style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                    <tr>
                                        <td valign="middle" align="left">
                                            ${object.company_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="middle" align="left" style="opacity: 0.7;">
                                            ${object.company_id.phone}
                                            % if object.company_id.email
                                            |
                                            <a href="'mailto:%s' % ${object.company_id.email}"
                                               style="text-decoration:none; color: #454748;">
                                                ${object.company_id.email}
                                            </a>
                                            % endif
                                            % if object.company_id.website
                                            |
                                            <a href="'%s' % ${object.company_id.website}"
                                               style="text-decoration:none; color: #454748;">
                                                ${object.company_id.website}
                                            </a>
                                            % endif
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
        <record id="mail_template_ticket_processed" model="mail.template">
            <field name="name">Odoo ticket processed</field>
            <field name="model_id" ref="ev_helpdesk.model_helpdesk_ticket"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590"
                       style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590"
                                       style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                    <tr>
                                        <td valign="top" style="font-size: 13px;">
                                            <div>
                                                Dear ${object.partner_id.name},
                                                <br/>
                                                <br/>
                                                Your request ${object.name} has been processed by
                                                ${object.user_id.name}!
                                                <br/>
                                                Thanks,
                                                <br/>
                                                ${object.team_id.name} Team.
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;">
                                            <hr width="100%"
                                                style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <!-- FOOTER -->
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590"
                                       style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                    <tr>
                                        <td valign="middle" align="left">
                                            ${object.company_id.name}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="middle" align="left" style="opacity: 0.7;">
                                            ${object.company_id.phone}
                                            % if object.company_id.email
                                            |
                                            <a href="'mailto:%s' % ${object.company_id.email}"
                                               style="text-decoration:none; color: #454748;">
                                                ${object.company_id.email}
                                            </a>
                                            % endif
                                            % if object.company_id.website
                                            |
                                            <a href="'%s' % ${object.company_id.website}"
                                               style="text-decoration:none; color: #454748;">
                                                ${object.company_id.website}
                                            </a>
                                            % endif
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>


        <record id="mail_template_ticket_team" model="mail.template">
            <field name="name">Ticket: New Created</field>
            <field name="model_id" ref="ev_helpdesk.model_helpdesk_ticket"/>
            <field name="subject">${object.display_name}</field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="email_to">${object.helpdesk_department_id.emails if object.sudo().helpdesk_department_id.emails else ''}</field>
            <field name="body_html" type="xml">
                <div>
                    Dear ${object.sudo().helpdesk_department_id.name or 'Madam/Sir'},
                    <br/>
                    <br/>
                    This automatic message informs you that we have ticket created (reference ${object.id}).
                    Please take a look.
                    <br/>
                    <a href="/web#view_type=form&amp;model=helpdesk.ticket&amp;id=${object.id}" target="_blank" style="color:#04AA6D; font-weight: bold;">View the ticket</a>
                    <br/><br/>
                    Kind regards,
                    <br/>
                    Admin HomeFarm.
                </div>
            </field>
            <field name="lang">${object.partner_id.lang or object.user_id.lang or user.lang}</field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>