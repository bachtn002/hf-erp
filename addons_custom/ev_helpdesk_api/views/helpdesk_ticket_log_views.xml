<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id='helpdesk_ticket_log_view_tree' model='ir.ui.view'>
        <field name="name">helpdesk_ticket_log_view_tree</field>
        <field name="model">helpdesk.ticket.log</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk ticket log" create="0" edit="0" delete="0">
                <field name="data"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <record id='helpdesk_ticket_log_view_form' model='ir.ui.view'>
        <field name="name">helpdesk.ticket.log.view.form</field>
        <field name="model">helpdesk.ticket.log</field>
        <field name="arch" type="xml">
            <form string="Helpdesk ticket log" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <field name="data"/>
                        <field name="message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='helpdesk_ticket_log_action' model='ir.actions.act_window'>
        <field name="name">Helpdesk Ticket Log</field>
        <field name="res_model">helpdesk.ticket.log</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="helpdesk_ticket_log_menu" name="Helpdesk ticket log"
            action="helpdesk_ticket_log_action" parent="ev_config_connect_api.connection_api_menu"
              sequence="12"/>

</odoo>
