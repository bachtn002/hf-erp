<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ButtonLoyaltyCustom" owl="1">
        <span class="control-button" t-on-click="onClickButtonLoyaltyCustom">
            <i class="fa fa-star"></i>
            <span>Điểm thưởng</span>
        </span>
    </t>

    <t t-name="ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('control-buttons')]" position="inside">
			<ButtonLoyaltyCustom onClickButton="onClickButtonLoyaltyCustom"/>
		</xpath>
	</t>
	
</templates>
