        <record id="view_account_asset_product_form" model="ir.ui.view">
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group//group[3]" position="after">
                    <group string="Config Asset">
                        <field name="x_code" force_save="1" readonly="1"/>
                        <field name="x_quantity" attrs="{'readonly': [('state','in', ('open', 'paused', 'close'))]}"/>
                        <field name="x_remaining_quantity" readonly="1" force_save="1"/>
                        <field name="x_product_asset_id" options="{'no_create': 1, 'no_create_edit': 1, 'no_open': 1}"
                               attrs="{'readonly': [('state','in', ('open', 'paused', 'close'))]}"/>
                        <field name="x_asset_type" attrs="{'readonly': [('state','!=', 'draft')]}" required="1"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state','!=', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='account_analytic_id']" position="after">
                    <field name="x_account_expense_item_id" required="1"
                           attrs="{'readonly': [('state','in', ('open', 'paused', 'close'))]}"
                           options="{'no_create': 1, 'no_create_edit': 1, 'no_open': 1}"/>
                </xpath>
                <xpath expr="//field[@name='account_analytic_id']" position="before">
                    <field name="x_inventory_loss_account_id" required="1"
                           attrs="{'readonly': [('state','in', ('open', 'paused', 'close'))]}"
                           options="{'no_create': 1, 'no_create_edit': 1, 'no_open': 1}"/>
                </xpath>
                <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='set_to_draft']" position="replace">
                    <button name="set_to_draft" string="Set to Draft" type="object"
                            attrs="{'invisible': [('state', '!=', 'open')]}"/>
                </xpath>
            </field>
        </record>

