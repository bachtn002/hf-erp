<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_quotation_document_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table[@class='table table-sm o_main_table']//span[@t-field='line.price_unit']"
               position="replace">
            <span t-esc="'{:,.0f}'.format(line.price_unit)"/>
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table']//span[@t-field='line.price_subtotal']"
               position="replace">
            <span t-esc="'{:,.0f}'.format(line.price_subtotal)"/>
        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table']//span[@t-field='line.product_qty']"
               position="replace">
            <t t-if="o.x_is_return">
                <span t-field="line.product_return_qty"/>
            </t>
            <t t-else="">
                <span t-field="line.product_qty"/>
            </t>
        </xpath>
        <xpath expr="//div[@id='total']//span[@t-field='o.amount_untaxed']" position="replace">
            <span t-esc="'{:,.0f}'.format(o.amount_untaxed)"/>
        </xpath>
        <xpath expr="//div[@id='total']//span[@t-field='o.amount_tax']" position="replace">
            <span t-esc="'{:,.0f}'.format(o.amount_tax)"/>
        </xpath>
        <xpath expr="//div[@id='total']//span[@t-field='o.amount_total']" position="replace">
            <span t-esc="'{:,.0f}'.format(o.amount_total)"/>
        </xpath>
        <xpath expr="//t[@t-if='o.dest_address_id']" position="after">
            <t t-if="o.picking_type_id">
                <t t-set="information_block">
                    <strong>Địa chỉ kho:</strong>
                    <div t-if="o.picking_type_id">
                        <div t-field="o.picking_type_id.warehouse_id.x_address_warehouse"/>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>

