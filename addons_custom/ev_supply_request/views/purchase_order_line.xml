<?xml version="1.0"?>
<odoo>

    <record id="purchase_order_line_listed_price_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.line.listed.price</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="before">
                <field name="x_listed_price"/>
            </xpath>
            <xpath expr="//field[@name='price_subtotal']" position="after">
                <field name="x_note"/>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="replace">
                <button name="button_cancel" string="Cancel" type="object"
                        attrs="{'invisible': ['|',('x_picking_confirm','=',True), ('state','in',('done','cancel'))]}"
                        groups="ev_supply_request.group_cancel_purchase_order"/>
            </xpath>
        </field>
    </record>

</odoo>
