<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductsWidgetDisplay" t-inherit="point_of_sale.ProductsWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('products-widget')]/ProductList" position="replace">
                <ProductsWidgetControlPanel breadcrumbs="breadcrumbs" subcategories="subcategories"
                                            hasNoCategories="hasNoCategories"/>
        </xpath>
        <xpath expr="//div[hasclass('products-widget')]/ProductsWidgetControlPanel" position="replace">
                <ProductList products="productsToDisplay" searchWord="searchWord" style="width: 85%"/>
        </xpath>
    </t>
</templates>
